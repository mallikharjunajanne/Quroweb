                        <label class="control-label col-sm-3 col-form-label  text-end "></label>
                        <div class="col-sm-4">
                            @{
                                bool isChecked0 = false;

                                foreach (var Holidayitem in ViewBag.List.HolidayTargetTbl[0])
                                {
                                    string Comparingvalue = Holidayitem.ForAll;

                                    if (Comparingvalue == "True")
                                    {
                                        isChecked0 = true;
                                        break;
                                    }
                                }
                            }
                            <input class="form-check-input" type="checkbox" id="Selectallusers_Checkbox" value="Select all users" @(isChecked0 ? "checked" : "") style="margin:4px;" />@*onclick="Selectalluserschkvalues()"*@
