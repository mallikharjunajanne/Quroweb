@model Connect4m_Web.Models.LMSproperties.MentorAttedanceProp
@{
    ViewData["Title"] = "PstAttendance";

}



<!DOCTYPE html>
<html>
<head>



</head>
<body>
    <div class="flex-grow-1 container-p-y container-fluid">
        

            <h4 class="py-3 mb-4"><span class="text-muted fw-light"> /</span> Post Mentor Attendance</h4>

            <div class="row mb-2">
                <div class="col-md-12 col-lg-12 mb-3">

                    <div class="card mb-4">
                        <div class="card-header d-flex align-items-center justify-content-between">
                            <h6 class="mb-0">
                                <span id="AddNewText_Span_CreatePage">
                                    POST ATTENDANCE
                                </span>
                            </h6>
                        </div>

                        <div class="card-body mb-2">

                            @*=============================  Form Start ================================*@
                            <form id="Serach_MA" class="needs-validation was-validated" novalidate>
                                <div>
                                    <div class="row">
                                        <div class="col">
                                            <input type="text" value="@ViewBag.instancceidME" class="form-control" id="InstanceidforMA" disabled hidden />

                                            @*=====================        TEXT BOX                 =================*@

                                            <div class="row mb-3">
                                                <div class="col-sm-3">
                                                </div>
                                                <label class="col-sm-2 col-form-label text-end" for="basic-default-name" asp-for="StartDate"></label>
                                                <div class="col-sm-4 form-group">
                                                    <input type="date" class="form-control" id="StartDate" asp-for="StartDate" required>
                                                    <span asp-validation-for="StartDate" class="invalid-feedback"></span>

                                                </div>
                                                <div class="col-sm-3">
                                                </div>
                                            </div>
                                            @*=====================         TEXT BOX                =================*@

                                            <div class="row mb-3">
                                                <div class="col-sm-3">
                                                </div>
                                                <label class="col-sm-2 col-form-label text-end" for="basic-default-name" asp-for="EndDate"></label>
                                                <div class="col-sm-4 form-group">
                                                    <input type="date" class="form-control" id="EndDate" asp-for="EndDate" required>
                                                    <span asp-validation-for="EndDate" class="invalid-feedback"></span>
                                                    <span class="compare"></span>
                                                </div>
                                                <div class="col-sm-3">
                                                </div>
                                            </div>
                                            @*=====================         TEXT BOX                =================*@

                                            <div class="row mb-3">
                                                <div class="col-sm-3">
                                                </div>
                                                <label class="col-sm-2 col-form-label text-end" for="basic-default-name" asp-for="Department"></label>
                                                <div class="col-sm-4">
                                                    <div class="position-relative" id="dropdown">

                                                        @Html.DropDownListFor(
                                                   x => x.Department,
                                                    new SelectList(ViewBag.Department, "Value", "Text"),
                                                   "-------select-------", new { @class = "select2 form-select select2-hidden-accessible", @id = "dropdown_Department_MA", @style = "color:black;", @required = "required" })
                                                        <span asp-validation-for="Department" class="invalid-feedback"></span>
                                                    </div>
                                                   
                                                </div>
                                                <div class="col-sm-3">
                                                </div>
                                            </div>
                                            @*=====================         TEXT BOX                =================*@

                                            <div class="row mb-3">
                                                <div class="col-sm-3">
                                                </div>
                                                <label class="col-sm-2 col-form-label text-end" for="basic-default-name" asp-for="Slots"></label>
                                                <div class="col-sm-4">
                                                    <div class="position-relative" id="dropdown">

                                                        @Html.DropDownListFor(
                                                   x => x.Slots,
                                                    new SelectList(ViewBag.Slots, "Value", "Text"),
                                                   "-------select-------", new { @class = "select2 form-select select2-hidden-accessible", @id = "dropdown_Slots_MA", @style = "color:black;", @required = "required" })
                                                        <span asp-validation-for="Slots" class="invalid-feedback"></span>

                                                    </div>
                                                </div>
                                                <div class="col-sm-3">
                                                </div>
                                            </div>
                                            @*=====================         TEXT BOX                =================*@

                                            <div class="row mb-3">
                                                <div class="col-sm-3">
                                                </div>
                                                <label class="col-sm-2 col-form-label text-end" for="basic-default-name" asp-for="Mentors"></label>
                                                <div class="col-sm-4">
                                                    <div class="position-relative" id="dropdown">

                                                        @Html.DropDownListFor(
                                                   x => x.Mentors,
                                                    new SelectList(ViewBag.Mentors, "Value", "Text"),
                                                     new { @class = "select2 form-select select2-hidden-accessible", @id = "dropdown_Mentors_MA", @style = "color:black;", @required = "required", @multiple = "multiple" })
                                                        <span asp-validation-for="Mentors" class="invalid-feedback"></span>

                                                    </div>
                                                    <label class="form-check-label" for="defaultCheck3">
                                                        Clear Selection
                                                    </label>
                                                    <input class="form-check-input" type="checkbox" value="" id="Select_All">
                                                </div>
                                                <div class="col-sm-3">
                                                </div>
                                            </div>
                                            @*=====================         BUTTONS                =================*@

                                            <div class="row justify-content-end" id="deletebutton">
                                                <div class="col-sm-4">
                                                </div>
                                                <div class="col-sm-2" id="deleteinner">

                                                </div>
                                                <div class="col-sm-6">
                                                    <button type="submit" class="btn btn-success waves-effect waves-light" id="sub_tblPA">Get Attendance Form</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                            @*=============================  Form End ================================*@

                        </div>

                    </div>
                    
                </div>
            </div>

       
        <div id="GetMentorAttendenceAppend"></div>

    </div>

   
</body>
</html>




<script src="~/lib/jquery/dist/jquery.js" type="text/javascript"></script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
