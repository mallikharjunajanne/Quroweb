        cursor:default !important
    }
    #dataforexpensivereport{
        display:none
    }
</style>
<div id="popupContainerapprovals" class="form-popupapprovals">

    <div class="form-containerapprovals" id="popupinnerapprovals">
        <span id="close-popup">Close</span>
        <h6><span>Comments</span></h6>
        <form id="approvalsdiscrption23" style="margin-top: 30px; border-top: 1px solid black; ">
        </form>

    </div>

</div>
@*<h1>ExpensiveReport</h1>*@

<div class="col-sm-12 ">

    <div class="card">

        <div class="card-body">
            <div class="default-according style-1" id="accordionoc">
                <div class="card">
                    <h6><span>EXPENSIVE REPORT</span></h6>


                    <div>

                        <div class="card-header bg-primary">
                            <h5 class="mb-0">
                                <button class="btn btn-link text-white" data-bs-toggle="collapse" data-bs-target="#collapseicon" aria-expanded="true" aria-controls="collapse11">SEARCH FOR EMPLOYEES</button>
                            </h5>
                        </div>
                        <div class="collapse show" id="collapseicon" aria-labelledby="collapseicon" data-bs-parent="#accordionoc">

                            <div class="row padding-search">
                                <div class="row">


                                    <form id="Serach_ER">
                                        <div class="row">

                                            <div class="col-3"></div>
                                            <div class="form-group col-2">
                                                <label class="control-label space required"> From Date</label>
                                            </div>
                                            <div class="form-group col-4">
                                                <input type="date" class="form-control" asp-for="FromDate" id="StartDate" name="FromDate" />
                                                <span asp-validation-for="FromDate" class="text-danger"></span>

                                            </div>
                                            <div class="col-3"></div>
                                            <div class="col-3"></div>
                                            <div class="form-group col-2">
                                                <label class="control-label space required">To Date </label>
                                            </div>
                                            <div class="form-group col-4">

                                                <input type="date" class="form-control" asp-for="Todate" id="EndDate" name="Todate" />
                                                <span class="compare"></span>
                                                <span asp-validation-for="Todate" class="text-danger"></span>


                                            </div>
                                            <div class="col-3"></div>
                                            <div class="col-3"></div>
                                            <div class="form-group col-2">
                                                <label class="control-label space">Approvals</label>
                                            </div>
                                            <div class="form-group col-4" style="display:flex">

                                                <input type="radio" name="Approval" value="1" style="flex: 0.2;" /><span>Approve</span>
                                                <input type="radio" name="Approval" value="0" style="flex: 0.2;" /><span>Reject</span>
                                                <input type="radio" name="Approval" value="2" style="flex: 0.2;" checked /><span>Both</span>

                                            </div>
                                            <div class="col-3"></div>
                                            <div class="col-3"></div>
                                            <div class="form-group col-2">


                                                <label class="control-label  space">Expenditure Type </label>

                                            </div>
                                            <div class="form-group col-4" style="display:flex">

                                                <input type="radio" name="Expendituretype" value="0" style="flex: 0.2;" /><span>Credit</span>
                                                <input type="radio" name="Expendituretype" value="1" style="flex: 0.2;" /><span>Debit</span>
                                                <input type="radio" name="Expendituretype" value="2" style="flex: 0.2;" checked /><span>Both</span>

                                            </div>
                                            <div class="col-3"></div>

                                            <div class="col-3"></div>

                                            <div style=" display: flex; gap: 17px;">
                                                <div class="col-4"></div>

                                                <input type="reset" value="Clear" class="btn btn-pill btn-outline-warning btn-air-warning" />
                                                <input type="submit" value="Get Report" id="sub_tblER" class="btn btn-pill btn-outline-success btn-air-success" />

                                            </div>
                                        </div>
                                    </form>
                                </div>


                            </div>
                        </div>

                    </div>

                </div>
                <div class="card" id="dataforexpensivereport">
                    <div style=" text-align: center; padding: 8px; background-color: lightcyan;">
                        <span style="font-weight:800 !important">
                            <span class="control-label space" style="font-weight:800" >Total Amount</span>
                            <span class="control-label" id="TotalSearchedAmount">0</span>
                        </span>

                    </div>

                    <div class="card-header bg-primary">
                        <h5 class="mb-0">
                            <button class="btn btn-link collapsed text-white" data-bs-toggle="collapse"> YOUR SEARCH RESULTS <span id="totalrecords_Tranctions_SEMER" style=" background-color: white; color: red; font-weight: 900; background-color: white; padding: 5px; border-radius: 16px;"></span> RECORD(S)</button>
                        </h5>
                    </div>

                    <div id="eg1" style="color: black; background-color: whitesmoke">
                        <table class=" table table-bordered" id="tblSEMsearchresultsER" style="background-color: whitesmoke; border-color: red; font-size: 11px;">
                            <thead>
                                <tr style="border-color: black;">
                                   
                                    <th style="border-color: blue" class="bg-primary">
                                        S.No
                                    </th>
                                    <th style="border-color: blue" class="bg-primary">
                                        Type of Expenditure

                                    </th>
                                    <th style=" border-color: blue" class="bg-primary">
                                        Amount

                                    </th>
                                    <th style=" border-color: blue" class="bg-primary">
                                        Payment Mode

                                    </th>
                                    <th style="border-color: blue; width: 237px;" class="bg-primary">
                                        Description

                                    </th>
                                    <th style="border-color: blue" class="bg-primary">
                                        Payment Date

                                    </th>
                                    <th style="border-color: blue" class="bg-primary">

                                        View
                                    </th>
                                    <th style="border-color: blue" class="bg-primary">

                                        Credit/Debit
                                    </th>
                                    <th style="border-color: blue" class="bg-primary">
                                        Status
                                    </th>


                                </tr>
                            </thead>
                        </table>
                    </div>



                </div>

            </div>
        </div>
    </div>

</div>
