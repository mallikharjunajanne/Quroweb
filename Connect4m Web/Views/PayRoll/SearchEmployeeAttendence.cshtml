                                    <div class="row justify-content">
                                        <div class="col-sm-4">
                                        </div>

                                        <div class="col-sm-8">
                                            <button type="button" class="btn btn-info waves-effect waves-light" id="backtopage_ME" onclick="nextpage('SearchManageEmployees',null)">Previous Page</button>


                                            <button type="reset" class="btn btn-warning waves-effect waves-light" id="clearform">Clear</button>
                                            <button type="submit" class="btn btn-success waves-effect waves-light" id="sub_tblEAP">Get Attendance Form</button>

