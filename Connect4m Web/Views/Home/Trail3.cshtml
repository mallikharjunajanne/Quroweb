<!DOCTYPE html>
<html lang="en">
<head>
    @{
        Layout = null;
    }
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="./assets/favicon.svg" />
    <link href="~/css/player.css" rel="stylesheet" />
    <link href="~/css/texts.css" rel="stylesheet" />
    <link href="~/css/buttons.css" rel="stylesheet" />

    <link href="~/css/Chapter_wise_Video_playing.css" rel="stylesheet" />


    <link href="~/css/Videodesign-m.css" rel="stylesheet" />
    <link href="~/css/Everyminutetest.css" rel="stylesheet" />
    <link href="~/css/navlinks_belowthevideo.css" rel="stylesheet" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100;400;700&display=swap"
          rel="stylesheet" />
    <title>Video Player</title>
</head>

<body>





    <main class="wrapper">
        <div class="player">
            <div class="player-overlay" data-fullscreen="false">
                <div class="container">
                    <div class="information-container">
                        @*<h1 class="title">Rain</h1>*@

                        <div class="video-header">
                            <div>
                                You have to dream before your dreams can come true

                            </div>

                            <span style="color:black">
                                Your Progress
                            </span>
                            <div style=" margin-left: 24%;">
                                <div class="circular">

                                    <div class="inner"></div>
                                    <div class="outer"></div>
                                    <div class="numb">
                                        0%
                                    </div>
                                    <div class="circle">
                                        <div class="dot">
                                            <span></span>
                                        </div>
                                        <div class="bar left">
                                            <div class="progress"></div>
                                        </div>
                                        <div class="bar right">
                                            <div class="progress"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <a id="back-from-video" href="/Videos/Managesubjecttools">Back</a>

                            <canvas id="canvas" style="display: none;"></canvas>
                            <button id="show-panel-button" onclick="showPanel()">Show Panel</button>
                            <button id="Hide-panel-button" onclick="HidePanel()">Hide Panel</button>

                        </div>
                        @*<p class="description">
                        You have to dream before your dreams can come true

                    </p>*@



                    </div>

                    <div class="player-container">
                        <div class="video-progress">
                            <div class="video-progress-filled"></div>
                        </div>




                        <div class="player-controls">
                            <div class="player-buttons">
                                <button aria-label="play"
                                        class="button play"
                                        title="play"
                                        type="button"></button>
                                <button aria-label="pause"
                                        class="button pause"
                                        hidden
                                        title="pause"
                                        type="button"></button>
                                <button aria-label="backward"
                                        class="button backward"
                                        title="backward"
                                        type="button"></button>
                                <div>



                                    <ul id="speedDropdown">
                                        <li data-speed="0.5">0.5x</li>
                                        <li data-speed="0.75">0.75x</li>
                                        <li data-speed="1.0">1x</li>
                                        <li data-speed="1.25">1.25x</li>
                                        <li data-speed="1.5">1.5x</li>
                                        <li data-speed="1.75">1.75x</li>
                                        <li data-speed="2.0">2x</li>
                                    </ul>
                                    <button id="speedButton" style="margin-left: -24px; width: 45px; ">
                                        1X

                                    </button>

                                </div>
                                <button aria-label="forward"
                                        class="button forward"
                                        title="forward"
                                        type="button"></button>
                                <button aria-label="volume"
                                        class="button volume"
                                        title="volume"
                                        type="button"></button>
                                <button aria-label="silence"
                                        class="button silence"
                                        hidden
                                        title="silence"
                                        type="button"></button>
                                <div class="volume-progress">
                                    <div class="volume-progress-filled"></div>
                                </div>
                                <div class="time-container">
                                    <p class="current-time">0:00</p>
                                    <p class="time-separator">/</p>
                                    <p class="duration-video">0:00</p>
                                </div>
                            </div>
                            <div class="expand-container">
                                <button aria-label="expand"
                                        class="button expand"
                                        title="expand"
                                        type="button"></button>
                                <button aria-label="reduce"
                                        class="button reduce"
                                        hidden
                                        title="reduce"
                                        type="button"></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div id="thumbnailappend" style="cursor:pointer"></div>
            <video class="video" id="video">
                   
                <source src="/Videos/8thClass.mp4" type="video/mp4">
            </video>
        </div>
        <div id="chapters-panel">
            <ul id="chapter-list">
                <li id="10" onclick="seekToTime(10)">

                    <div class="chapter-thumbnail">
                        <img alt="Chapter 1">
                    </div>
                    <div class="chapter-title"><a href="#">00:10 </a>Chapter 1</div>
                </li>
                <li id="20" onclick="seekToTime(20)">
                    <div class="chapter-thumbnail">
                        <img alt="Chapter 1">
                    </div>
                    <div class="chapter-title"><a href="#">00:20 </a>Chapter 2</div>
                </li>

                <li id="40" onclick="seekToTime(40)">
                    <div class="chapter-thumbnail">
                        <img alt="Chapter 1">
                    </div>
                    <div class="chapter-title"><a href="#">00:40 </a>Chapter 3</div>
                </li>
                <li id="60" onclick="seekToTime(60)">
                    <div class="chapter-thumbnail">
                        <img alt="Chapter 1">
                    </div>
                    <div class="chapter-title"><a href="#">01:00 </a>Chapter 4</div>
                </li>
                <li id="80" onclick="seekToTime(80)">
                    <div class="chapter-thumbnail">
                        <img alt="Chapter 1">
                    </div>
                    <div class="chapter-title"><a href="#">01:20 </a>Chapter 5</div>
                </li>
                <li id="100" onclick="seekToTime(100)">
                    <div class="chapter-thumbnail">
                        <img alt="Chapter 1">
                    </div>
                    <div class="chapter-title"><a href="#">01:40 </a>Chapter 6</div>
                </li>

                <li id="120" onclick="seekToTime(120)">
                    <div class="chapter-thumbnail">
                        <img alt="Chapter 1">
                    </div>
                    <div class="chapter-title"><a href="#">02:00 </a>Chapter 7</div>
                </li>
                <li id="140" onclick="seekToTime(140)">
                    <div class="chapter-thumbnail">
                        <img alt="Chapter 1">
                    </div>
                    <div class="chapter-title"><a href="#">02:20 </a>Chapter 8</div>
                </li>

            </ul>
        </div>

        @*----------------Question And Options With Time      -----------------*@






    </main>


    <div class="form-popup" id="myyForm">

        <form class="form-container" id="12form">
            <label>Remaining Time :<span id="timer">00:10</span></label>
            <img src="~/Images/multiple-choice.png" />
            <div style="color: black; font-weight: 900; ">
                <div>
                    <input type="radio" name="ra" />A  <input type="radio" name="ra" /> B <input type="radio" name="ra" />  C <input type="radio" name="ra" /> D
                </div>

                <input type="submit" class="btn-dark" id="textsubmit" value="Submit" />
            </div>

        </form>


    </div>
    @*<hr style="color:black" />*@

    <div class="topnav">
        <button class="abc" id="Course-Contents">Course Content</button>
        <button class="abc">Over View</button>
        <button class="abc" id="create-notes-navlink">Notes</button>
        <button class="abc">Marks</button>
    </div>
  
    <div id="below-video-content">










    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>


    <script src="~/js/chapter_wise_video_playing.js"></script>

    <script src="~/js/video_playing.js"></script>
    <script src="~/js/video-nav-links-content.js"></script>
</body>
</html>
