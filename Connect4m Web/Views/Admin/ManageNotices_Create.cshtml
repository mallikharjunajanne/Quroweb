@*@model Connect4m_Web.Models.Attendenceproperites.UserScreen.NoticeTypes*@
@model Connect4m_Web.Models.Attendenceproperites.UserScreen.ENoticeTypes
@{
    Layout = null;
}

<div class="col-md-12 col-lg-12 mb-3">
    <input type="hidden" id="ENoticeinsertedtxtid"/>
    
    <div class="card mb-4">
        <div class="card-header d-flex align-items-center justify-content-between">
            <h5 class="mb-0">
                SAVE NOTICE
            </h5>
        </div>
        <div class="card-body">
            <form id="Createnoticetypeform1" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row mb-3">
                    <label class="control-label col-sm-4 col-form-label text-end required space">Notice Type</label>
                    <div class="col-sm-4">
                        <select id="ENoticeTypeId_STXT" asp-for="ENoticeTypeId" class="form-select select2 form-select select2-hidden-accessible">
                        </select>
                        <span asp-validation-for="ENoticeTypeId" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="control-label col-sm-4 col-form-label text-end required space">Notice Subject</label>
                    <div class="col-sm-4">
                        <textarea id="Subjecttxt" asp-for="Subject" class="form-control" maxlength="1000" oninput="CharCount()" onkeydown="return preventSpecialCharacters(event)"></textarea>
                        <span id="charCounts" style="font-size: 12px;"></span>
                        <span id="Characterslengths" style="font-size: 12px;"></span>
                        <span asp-validation-for="Subject" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="control-label col-sm-4 col-form-label text-end "></label>
                    <div class="col-sm-4">
                        <b>Note</b>:-Following characters are restricted: "
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="control-label col-sm-4 col-form-label text-end  space">Description</label>
                    <div class="col-sm-4">
                        <textarea asp-for="ENoticeDescription" id="ENoticeDescription_STXT" class="form-control" maxlength="6500" oninput="Charactercount()"></textarea>
                        <span asp-validation-for="ENoticeDescription" class="text-danger"></span>
                        <span id="DescriptionCharacters" style="font-size: 12px;"></span>
                        <span id="Characterlengths" style="font-size: 12px;"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="control-label col-sm-4 col-form-label text-end required space">Start Date</label>
                    <div class="col-sm-4">
                        <input type="date" asp-for="StartDate" id="Startdatetxt" class="form-control" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="control-label col-sm-4 col-form-label text-end required space">End Date(Expiry Date)</label>
                    <div class="col-sm-4">
                        <input type="date" asp-for="ExpiryDate" id="Exdatetxt" class="form-control" />
                        <span asp-validation-for="ExpiryDate" class="text-danger"></span>
                        <span id="Ermsgsp" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="control-label col-sm-4 col-form-label text-end  space">Upload Notice document</label>
                    <div class="col-sm-4">
                        <input type="file" id="AttachedDocument" name="AttachedDocument" asp-for="AttachedDocument" class="form-control" />
                    </div>
                </div>
                <div class="row mb-3" id="NoticeDisplaylogindivid">
                    <label class="control-label col-sm-4 col-form-label text-end required space">Display this Notice in Login </label>
                    <div class="col-sm-4">
                        <div class="radio radio-primary">
                            <input id="radio55" type="radio" asp-for="ShowInLogin" name="radio1" value="0" checked>
                            <label class="mb-0" for="radio55">No</label>
                            <input id="radio55" type="radio" asp-for="ShowInLogin" name="radio1" value="1">
                            <label class="mb-0" for="radio55">Yes</label>
                        </div>
                    </div>
                </div>
                <div class="row justify-content text-center">
                    <div class="col-sm-12">
                        <button type="reset" class="btn btn-warning waves-effect waves-light" id="btnclear">Clear</button>
                        <button type="button" class="btn btn-dark waves-effect waves-light" id="btnBackToSearch">Back To Search</button>
                        <button type="submit" class="btn btn-info waves-effect waves-light" id="btnppostthisnotice">Post this Notice</button>
                        <button type="submit" class="btn btn-success waves-effect waves-light" id="btnsubmit">Save</button>
                        <button type="submit" class="btn btn-primary waves-effect waves-light" id="btnsaveandpost">Save and Post</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>








<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
