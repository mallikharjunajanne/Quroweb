@model Connect4m_Web.Models.Attendenceproperites.UserScreen.Admissionreport
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>


</head>
<body>
    <div class="flex-grow-1 container-p-y container-fluid">
        <h4 class="py-3 mb-4"><span class="text-muted fw-light">Reports /</span>ADMISSION REPORT</h4>
        <div class="row mb-2">
            <div class="col-md-12 col-lg-12 mb-3">
                <span class="text-danger" id="Commonerrormessage"></span>
                <div class="card mb-4">
                    <div class="card-header d-flex align-items-center justify-content-between">
                        <h5 class="mb-0">SEARCH USERS</h5> <small class="text-muted float-end">* INDICATES MANDATORY FIELD</small>
                    </div>
                    <div class="card-body">
                        <form id="Admissionsummaryreportform" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col">
                                    <div class="row mb-3">
                                        <div class="mb-3 row">
                                            <label class="col-sm-3 col-form-label space text-end" for="basic-default-name">Instances </label>
                                            <div class="col-sm-3">
                                                <select asp-for="Instancesnames" class="form-select" id="Instancesnames_ddl" multiple>
                                                    <option></option>
                                                </select>
                                            </div>
                                            <label class="col-sm-3 col-form-label space text-end" for="basic-default-name">Registration Number</label>
                                            <div class="col-sm-3">
                                                <input type="text" asp-for="InstanceUserCode" class="form-control" id="Registrationnumber_txtid" name="InstanceUserCode" placeholder="Registration Number">
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label class="col-sm-3 col-form-label space text-end" for="basic-default-name">First Name</label>
                                            <div class="col-sm-3">
                                                <input type="text" asp-for="FirstName" class="form-control" id="FirstName_txtid" name="FirstName" placeholder="First Name">
                                            </div>
                                            <label class="col-sm-3 col-form-label space text-end" for="basic-default-name">Middle Name</label>
                                            <div class="col-sm-3">
                                                <input type="text" asp-for="MiddleName" class="form-control" id="MiddleName_txtid" name="MiddleName" placeholder="Middle Name">
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label class="col-sm-3 col-form-label space text-end" for="basic-default-name">Last Name</label>
                                            <div class="col-sm-3">
                                                <input type="text" asp-for="LastName" class="form-control" id="LastName_txtid" name="LastName" placeholder="Last Name">
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label class="col-sm-3 col-form-label space text-end" for="basic-default-name">For the Session</label>
                                            <div class="col-sm-3">
                                                <select asp-for="Acadamicyearid" class="form-select" id="Acadamicyear_ddlid">
                                                </select>
                                                <span asp-validation-for="Acadamicyearid" class="text-danger"></span>
                                            </div>
                                            <label class="col-sm-3 col-form-label space text-end" for="basic-default-name">Class </label>
                                            <div class="col-sm-3">
                                                <select asp-for="Subclassificationid" class="form-select" id="Class_ddl">
                                                </select>
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label class="col-sm-3 col-form-label space text-end" for="basic-default-name">From Registration Date</label>
                                            <div class="col-sm-3">
                                                <input type="date" asp-for="FromRegistrationdate" class="form-control" id="FromRegistrationdatetxt" name="FromRegistrationdate" />
                                                <span asp-validation-for="FromRegistrationdate" class="text-danger"></span>
                                            </div>
                                            <label class="col-sm-3 col-form-label space text-end" for="basic-default-name">To Registration Date</label>
                                            <div class="col-sm-3">
                                                <input type="date" asp-for="ToRegistrationdate" class="form-control" id="ToRegistrationdatetxt" name="ToRegistrationdate" />
                                                <span asp-validation-for="ToRegistrationdate" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row ">
                                            <label class="col-sm-3 col-form-label space text-end" for="basic-default-name">Application Status</label>
                                            <div class="col-sm-6">
                                                <div class="col mt-2">
                                                    <div class="form-check form-check-inline">
                                                        <input asp-for="ApplicationStatus" class="form-check-input check" id="radioinline1" type="radio" name="Admissiontype" value="0" required="">
                                                        <label class="form-check-label" for="radioinline1">Registered</label>
                                                    </div>
                                                    <div class="form-check form-check-inline">
                                                        <input asp-for="ApplicationStatus" class="form-check-input check" id="radioinline2" type="radio" name="Admissiontype" value="1" required="">
                                                        <label class="form-check-label" for="radioinline2"> Admission Confirmed</label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        @*<div class="mb-3 row">
                                            <label class="col-sm-3 col-form-label space text-end" for="basic-default-name">Application Status</label>
                                            <div class="col-sm-4">
                                            <input type="radio" asp-for="ApplicationStatus" name="Admission" value="1" />Registered
                                            <input type="radio" asp-for="ApplicationStatus" name="Admission" value="0" />Admission Confirmed
                                            </div>
                                            </div>*@
                                    </div>
                                    <div class="row justify-content-center text-center">
                                        <div class="col-sm-12">
                                            <button type="reset" class="btn btn-warning waves-effect waves-light" id="Clearbtn">Clear</button>
                                            <button type="submit" class="btn btn-success waves-effect waves-light" id="Searchbtn">Search</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-12 col-lg-12 mb-3">
            @*<div class="text-right">
                <a href="Javascript:void(0);" id="SummaryreportExporttoexcel">Export to Excel</a>
            </div>*@
            <div class="card mb-4" id="">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h6 class="mb-0">
                        <span>
                            YOUR SEARCH RESULTED <span id="Admissionreporttblcount" class="badge badge-center rounded-pill bg-primary bg-glow"></span>RECORDS.
                        </span>
                    </h6>
                </div>
                <div class="table-responsive text-nowrap">
                    <table id="Admissionssummaryreporttbl" class="table-hover table-bordered no-footer text-center dataTable">
                        <thead>
                            <tr>
                                <th>S. No.</th>
                                <th>Registration Date</th>
                                <th>Reg No</th>
                                <th>Name</th>
                                <th>DOB</th>
                                <th>Class Applied</th>
                                <th>Father Name</th>
                                <th>Mother name</th>
                                <th>Mobile number</th>
                                <th>Email Id</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</body>
</html>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>

@*<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>*@

<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js" type="text/javascript"></script>


<script src="~/js/CommonScripts.js"></script>
<script src="~/js/Admissionsummaryreport.js"></script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

