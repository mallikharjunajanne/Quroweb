@model Connect4m_Web.Models.Attendenceproperites.PostAttendance

@{
    ViewData["Title"] = "Post_Attendance";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        span.validation {
            display: block;
            color: red;
        }
    </style>
    @*<link href="~/Styles/PostAttendance.css" rel="stylesheet" />*@
<link href="~/css/PostAttendance.css" rel="stylesheet" />
</head>
<body>

    <div class="card-header pb-0">
        <div style=" font-size: 20px; text-align: center;">
            <h1 style=" font-weight: 900; font-size: 22px;">POST ATTENDANCE</h1>
        </div>
    </div>
    <div class="card">
        <div style=" font-size: 11px; margin-left: 32px; color: red;">
            <label id="validation2"></label><br />
            <label id="validation1"></label>
            <span class="validation" asp-validation-for="StartDate"></span>
            <span class="validation" asp-validation-for="EndDate"></span>
            <p id="MessageID"></p>
            <p id="DateError_Message"></p>
        </div>

        <div class="card-body">
            <div class="default-according style-1" id="accordionoc">
                <div class="card">
                    <div class="card-header bg-primary">
                        <h5 class="mb-0">
                            <button class="HeaderBtn collapsed btn btn-link text-white" data-bs-toggle="collapse" data-bs-target="#collapseicon" aria-expanded="true" aria-controls="collapse11" style="width: 99%;">SEARCH FOR STUDENTS</button>
                        </h5>
                    </div>
                    <div class="collapse show" id="collapseicon" aria-labelledby="collapseicon" data-bs-parent="#accordionoc" style=" margin-top: 25px;">
                        <div class="card-body">
                            <form class="form" id="myform">
                                <div class="form-group row g-3">
                                    <div id="Ct_Lg_DivId" class="row">
                                        <div class="form-group row">
                                            <div class="col-3"></div>
                                            <div class="form-group col-2">
                                                <label class="@*col-sm-5 col-form-label*@ form-label required space">Date  </label>
                                            </div>
                                            <div class="@*col-sm-7*@ form-group col-4">
                                                <span id="currentDate"></span>
                                            </div>
                                            <div class="col-3"></div>


                                            <div class="col-3"></div>
                                            <div class="form-group col-2">
                                                <label class="form-label required space">Department</label>
                                            </div>
                                            <div class="form-group col-4" id="F_IN_Class">
                                                @Html.DropDownListFor(Model => Model.ClassificationName, new SelectList(ViewBag.Cl_DD, "Value", "Text"), "--Select--", new { @id = "CT_Classification_Id", @class = "Dropdown form-select input-air-primary digits" })
                                            </div>
                                            <div class="col-3"></div>

                                            <div class="col-3"></div>
                                            <div class="form-group col-2">
                                                <label class="col-sm-5 col-form-label"><font style=" color: red; font-size: 13px;"><b>*</b></font>Class</label>
                                            </div>
                                            <div class="form-group col-4" id="Cl_Subject_DD_by_slot_Dd">
                                                @Html.DropDownListFor(Model => Model.ClassificationName, new SelectList(ViewBag.Cl_Subject_DD, "Value", "Text"), "--Select--", new { @id = "CT_InsClassSub_Id", @class = "Dropdown form-select input-air-primary digits" })
                                            </div>
                                            <div class="col-3"></div>
                                        </div>
                                    </div>
                                    <div id="Admin_Lg_Div_id" class="row">
                                        <div class="col-3"></div>
                                        <div class="form-group col-2">
                                            <label class="form-label required space">StartDate:</label>
                                        </div>
                                        <div class="form-group col-4">
                                            <input type="date" id="StartDateid" class="form-control Dropdown">
                                        </div>
                                        <div class="col-3"></div>

                                        <div class="col-3"></div>
                                        <div class="form-group col-2">
                                            <label class="form-label required space">EndDate:</label>
                                        </div>
                                        <div class="form-group col-4">
                                            <input type="date" class="form-control Dropdown" id="EndDateid">
                                        </div>
                                        <div class="col-3"></div>
                                        <div class="col-3"></div>
                                        <div class="form-group col-2">
                                            <label class="form-label required space">
                                                Department
                                            </label>
                                        </div>
                                        <div class="form-group col-4" id="DCFN10">
                                            @Html.DropDownListFor(Model => Model.ClassificationName, new SelectList(ViewBag.Names, "Value", "Text"), "--Select--", new { @id = "CFNID1", @class = "Dropdown form-select" })
                                        </div>
                                        <div class="col-3"></div>
                                        <div class="col-3"></div>
                                        <div class="form-group col-2">
                                            <label class="form-label required space">Class</label>
                                        </div>

                                        <div class="form-group col-4" id="SCFNID2">
                                            @Html.DropDownListFor(Model => Model.SubClassificationName, new SelectList(string.Empty, "Value", "Text"), "--Select--", new { @id = "SCFNID1", @class = "form-select" })
                                        </div>
                                    </div>
                                    <div class="col-3"></div>

                                    
                                    <div class="form-group col-2"><label class="form-label required space">Slot</label></div>

                                    <div class="form-group col-4">
                                        @Html.DropDownListFor(Model => Model.SubjectName, new SelectList(string.Empty, "Value", "Text"), "--Select--", new { @class = "form-select Dropdown", @id = "SubjectName" })
                                    </div>
                                    <div class="col-3"></div>
                                    <div class="col-3"></div>
                                    <div class="form-group col-2">
                                        <label class="form-label"></label>
                                    </div>
                                    <div class="form-group col-4">
                                        <input type="checkbox" class="checkbox_animated" id="chk_seacrh_icon">Show Change Activity
                                    </div>
                                    <div class="col-3"></div>
                                    <div class="col-3"></div>
                                    <div class="form-group col-2">
                                        
                                    </div>

                                    <div class="form-group col-4">
                                        <input type="button" class="btn btn-pill btn-outline-success btn-air-success" value="Get Attendance Form" id="Get_atd_btn" style=" border-radius: 13px;">
                                    </div>
                                    <div class="col-3"></div>

                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <div id="GetAttendance_Table">

                </div>

            </div>
        </div>
    </div>


    <input type="hidden" value="@ViewBag.LoginUserId" id="Lg_UserId_Txtid" />
    <input type="hidden" value="@ViewBag.InstanceClassificationId" id="Teacher_Lg_IncId_Txtid" />
    <input type="hidden" value="@ViewBag.InstanceSubClassificationId" id="Teacher_Lg_InscId_Txtid" />
    <input type="hidden" value="@ViewBag.Roleid" id="Teacher_Lg_Roleid_Txtid" />

</body>
</html>


<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://code.jquery.com/ui/1.13.0/jquery-ui.min.js"></script>


<script src="~/js/Get_ClassificationNames.js"></script>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>

    .spinner-container {
        display: flex;
        align-items: center;
    }

    .spinner {
        margin-right: 10px;
        border: 4px solid #f3f3f3;
        border-top: 4px solid #3498db;
        border-radius: 50%;
        width: 20px;
        height: 20px;
        animation: spin 2s linear infinite;
    }

    keyframes spin {
        transform: rotate(0deg);
        transform: rotate(360deg);
    }
</style>

<script>
    //Date Function Javascript Code start
    var date = new Date();
    var day = date.getDate();
    var month = date.getMonth() + 1;
    var year = date.getFullYear();

    if (month < 10) month = "0" + month;
    if (day < 10) day = "0" + day;

    var today = year + "-" + month + "-" + day;

    document.getElementById("StartDateid").value = today;
    document.getElementById("EndDateid").value = today;


</script>


