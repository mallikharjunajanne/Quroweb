
@model Connect4m_Web.Models.LMSproperties.SchoolInstances
@{
    ViewData["Title"] = "SchoolwiseAttendanceReport";

}

<!DOCTYPE html>
<html>
<head>


</head>
<body>
    <div class="flex-grow-1 container-p-y container-fluid">


        <h4 class="py-3 mb-4"><span class="text-muted fw-light">Reports/</span> School Wise Attendance Report</h4>

        <!-- Examples -->
        <div class="row mb-2">
            <div class="col-md-12 col-lg-12 mb-3">
                @*<a id="BtnCreateNewSubjects" class="text-end" onclick="CreateNewSubjects()">Create Subject</a>*@
                <div class="card mb-4">
                    <div class="card-header d-flex align-items-center justify-content-between">
                        <h5 class="mb-0">
                            <span id="AddNewText_Span_CreatePage">
                                SCHOOL WISE ATTENDANCE REPORT
                            </span>
                        </h5> @*<small class="text-muted float-end">Default label</small>*@
                    </div>


                    <div class="card-body">
                        @*=============================  Form Start ================================*@
                        <form id="SearchSchoolattendance" class="needs-validation was-validated" novalidate>
                            <div>
                                <div class="row">
                                    <div class="col">
                                        @*=====================    Radio Buttons ( Summary and Detail Summary)  =================*@

                                        <div class="row mb-3" id="summaryradio">

                                            <div class="col-sm-2">
                                            </div>
                                            <label class="col-sm-3 col-form-label text-end" for="basic-default-name" asp-for="SchInstance"></label>

                                            <div class="col-sm-5">
                                                @Html.DropDownListFor(
                                           x => x.SchInstance,
                                            new SelectList(ViewBag.SchInstance, "Value", "Text"),
                                             new { @class = "form-select", @id = "dropdown_SchInstance", @multiple = "multiple", @required = "required" })
                                                <input class="form-check-input" type="checkbox" value="" id="Select_Allsch">
                                                <label class="form-check-label" for="defaultCheck3">
                                                    Select All
                                                </label>

                                                @*<span class="invalid-feedback" id="errorbox1" style="display:block !important"></span>*@
                                                <span class="invalid-feedback" asp-validation-for="SchInstance"></span>
                                            </div>
                                            <div class="col-sm-2">
                                            </div>
                                        </div>

                                        @*==================== =================*@
                                        <div class="row mb-3">

                                            <div class="col-sm-2">
                                            </div>
                                            <label class="col-sm-3 col-form-label text-end" for="basic-default-name" asp-for="AttendanceFromdate"></label>

                                            <div class="col-sm-5">
                                                <input type="date" class="form-control" asp-for="AttendanceFromdate" id="startdate" required>
                                                <span asp-validation-for="AttendanceFromdate" class="invalid-feedback"></span>
                                                <span class="compare"></span>

                                            </div>
                                            <div class="col-sm-2">
                                            </div>
                                        </div>

                                        @*==================== =================*@





                                        <div class="row justify-content-end">
                                            <div class="col-sm-5">
                                            </div>
                                            <div class="col-sm-7">
                                                <button type="reset" class="btn btn-warning waves-effect waves-light">Clear</button>
                                                <button type="submit" class="btn btn-success waves-effect waves-light">Search</button>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </form>
                        @*=============================  Form End ================================*@
                    </div>
                </div>



            </div>

        </div>
        <!-- Examples -->

        <div id="appendallschoolattendance" class="card mb-5"></div>

        <div id="appendallschoolattendanceSubout" class="card" style="display:none">
            <div class="demo-inline-spacing">
                <button type="button" class="btn rounded-pill btn-label-primary waves-effect" id="exportexcelschoolattendancereportsub">Export Excel</button>

            </div>
            <h5 class="card-title mb-0">
                <span id="CountOfRecords_schoolwiseatte">YOUR SEARCH RESULTED <span id="Counts" class="number-circle"></span> RECORD(S).</span>
            </h5>

            <div id="appendallschoolattendanceSub">

            </div>


        </div>

    </div>

    
</body>
</html>
<script src="~/lib/jquery/dist/jquery.js" type="text/javascript"></script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script src="~/js/SchoolReport.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.17.1/xlsx.full.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/FileSaver.js/2.0.5/FileSaver.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/exceljs/4.3.0/exceljs.min.js"></script>

