@model Connect4m_Web.Models.LMSproperties.ManageEmployeeAttendence
@{
    ViewData["Title"] = "SearchEmployeeAttendence";
    Layout = null;
}

<link href="~/css/CommonStyle.css" rel="stylesheet" />

<div class="col-sm-12 ">

    <div class="card">

        <div class="card-body">
            <div class="default-according style-1" id="accordionoc">
                <div class="card">
                    <h6><span>EMPLOYEE ATTENDANCE POSTING</span></h6>



                    <div id="appendsearchsalaryattributeforroles">

                        <div class="card-header bg-primary">
                            <h5 class="mb-0">
                                <button class="btn btn-link text-white" data-bs-toggle="collapse" data-bs-target="#collapseicon" aria-expanded="true" aria-controls="collapse11">
                                    <span id="updatesalaryattribute" style=" font-weight: 900;"></span>SEARCH ATTENDENCE <span style=" margin-left: 50%;" class="required"> INDICATES REQUIRED FIELDS</span>

                                </button>
                            </h5>

                        </div>
                        <div class="collapse show" id="collapseicon" aria-labelledby="collapseicon" data-bs-parent="#accordionoc">

                            <div class="row padding-search">
                                <div class="row">

                                    <form id="Serach_EAP">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                        <div class="row">
                                            @*<input asp-for="InstanceSubjectId" class="form-control" id="formInstanceSubjectId" hidden />*@

                                            <div class="col-3"></div>
                                            <div class="form-group col-2">
                                                <label asp-for="Month" class="control-label required space"></label>
                                            </div>
                                            <div class="form-group col-4">
                                                <div id="Drop_Format_SEM_3">
                                                    @Html.DropDownListFor(
                                               x => x.Month,
                                                new SelectList(ViewBag.Months, "Value", "Text"),
                                            "-------select-------", new { @class = "form-select readonly", @id = "insertdropdown_Month_EAP", @style = "color:black;" })

                                                </div>
                                                <span asp-validation-for="Month" class="text-danger"></span>
                                            </div>
                                            <div class="col-3"></div>
                                            <div class="col-3"></div>

                                            <div class="form-group col-2">
                                                <label asp-for="year" class="control-label required space"></label>
                                            </div>
                                            <div class="form-group col-4">
                                                <div id="Drop_Format_SEM_3">
                                                    @Html.DropDownListFor(
                                               x => x.year,
                                                new SelectList(ViewBag.Years, "Value", "Text"),
                                            "-------select-------", new { @class = "form-select readonly", @id = "insertdropdown_year_EAP", @style = "color:black;" })

                                                </div>
                                                <span asp-validation-for="year" class="text-danger"></span>

                                            </div>
                                            <div class="col-3"></div>
                                            <div class="col-3"></div>

                                            <div class="form-group col-2">
                                                <label asp-for="RoleId" class="control-label required space"></label>
                                            </div>
                                            <div class="form-group col-4">
                                                <div id="Drop_Format_SEM_3">
                                                    @Html.DropDownListFor(
                                               x => x.RoleId,
                                                new SelectList(ViewBag.RoleId, "Value", "Text"),
                                            "-------select-------", new { @class = "form-select readonly", @id = "insertdropdown_RoleId_EAP", @style = "color:black;" })

                                                </div>
                                                <span asp-validation-for="RoleId" class="text-danger"></span>

                                            </div>
                                            <div class="col-3"></div>
                                            <div class="col-3"></div>

                                            <div class="form-group col-2">
                                                <label asp-for="InstanceClassificationId" class="control-label required space"></label>
                                            </div>
                                            <div class="form-group col-4">
                                                <div id="Drop_Format_SEM_3">
                                                    @Html.DropDownListFor(
                                               x => x.InstanceClassificationId,
                                                new SelectList(ViewBag.Department, "Value", "Text"),
                                            "-------select-------", new { @class = "form-select readonly", @id = "insertdropdown_InstanceClassificationId_EAP", @style = "color:black;" })

                                                </div>
                                                <span asp-validation-for="InstanceClassificationId" class="text-danger"></span>

                                            </div>
                                            <div class="col-3"></div>

                                            <div class="col-3"></div>

                                            <div class="form-group col-2">
                                                <label asp-for="InstanceSubClassificationId" class="control-label  space"></label>
                                            </div>
                                            <div class="form-group col-4">
                                                <div id="Drop_Format_SEM_3">
                                                    @Html.DropDownListFor(
                                               x => x.InstanceSubClassificationId,
                                                new SelectList(ViewBag.SubDepartment, "Value", "Text"),
                                            "-------select-------", new { @class = "form-select readonly", @id = "insertdropdown_InstanceSubClassificationId_EAP", @style = "color:black;",@disabled=true })

                                                </div>

                                            </div>
                                            <div class="col-3"></div>

                                            <div style=" display: flex; gap: 17px;">
                                                <div class="col-2"></div>
                                                <input type="button" value="Previous Page" id="backtopage_SAR" onclick="nextpage('SearchManageEmployees',null)" class="btn btn-pill btn-outline-primary btn-aprimary" />
                                                <input type="reset" value="Clear" class="btn btn-pill btn-outline-warning btn-air-warning" id="clearform" />
                                                <input type="submit" value="Get Attendance Form" id="sub_tblEAP" class="btn btn-pill btn-outline-success btn-air-success" />
                                                <input type="button" value="Next Page" id="Nextpage_SAR" class="btn btn-pill btn-outline-info btn-air-info" onclick="nextpage('SearchEmployeeDetails',null)" />

                                            </div>
                                        </div>
                                    </form>
                                </div>


                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<div id="GetEmployeeAttendenceAppend">

</div>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>


<script src="~/js/PayRoll_6.js"></script>
