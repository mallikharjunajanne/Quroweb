<script>
    $(document).ready(function () {
        var SelectHours = $('#TimeHoursdd_id');
        for (var i = 1; i <= 23; i++) {
            var hour = i < 10 ? '0' + i : i;
            SelectHours.append($('<option>', {
                value: hour,
                text: hour
            }));
        }

        var SelectMinutes = $('#Timeminutesdd_id');
        for (var i = 0; i < 60; i++) {
            var minute = i < 10 ? '0' + i : i;
            SelectMinutes.append($('<option>', {
                value: minute,
                text: minute
            }));
        }

    });
</script>