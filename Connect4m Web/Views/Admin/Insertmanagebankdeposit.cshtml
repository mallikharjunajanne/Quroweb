@model Connect4m_Web.Models.Attendenceproperites.UserScreen.Bankdeposit

@{
    ViewData["Title"] = "ManageBank Deposit";
    //Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>

</head>
<body>
    <div class="col-md-12 col-lg-12 mb-3">
        <div class="text-right">
            <span data-value="@ViewBag.Returnmessage" id="Insert_Updatespanid" style="display:block;"></span>
            <a href="" id="Backtosearchlnk">Back to Search</a>
        </div>
        <div class="card mb-4">
            <div class="card-header d-flex align-items-center justify-content-between">
                <h5 class="mb-0">
                    <span>
                        ADD DEPOSIT DETAILS
                    </span>
                </h5>
            </div>
            <div class="card-body">
                <form id="Bankdepositform" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col">
                            <div class="row mb-3">
                                <div class="mb-3 row">
                                    <label class="col-sm-2 col-form-label space required text-end" for="basic-default-name">Payment Mode</label>
                                    <div class="col-sm-4">
                                        @Html.DropDownListFor(x => x.Paymentmodeid, new SelectList(ViewBag.PaymentModeddl, "Value", "Text"),
                                  "-------select-------", new { @class = "select2 form-select select2-hidden-accessible", @id = "Paymentmodeidddl", @style = "color:black;", @required = "required" })
                                        @*<select id="Paymentmodeidddl" asp-for="Paymentmodeid" class="form-select"></select>*@
                                        <span asp-validation-for="Paymentmodeid" class="text-danger"></span>
                                        <input type="hidden" asp-for="FeeDepositId" id="Feedeposittxtid" />
                                    </div>
                                </div>
                                <div class="mb-3 row">
                                    <label class="col-sm-2 col-form-label space required text-end" for="basic-default-name">Deposit Amount</label>
                                    <div class="col-sm-4">
                                        <input type="text" asp-for="Depositamount" class="form-control" id="Depositamounttxt" name="Depositamount" autocomplete="off" />
                                        <span asp-validation-for="Depositamount" class="text-danger"></span>
                                    </div>
                                    <label class="col-sm-2 col-form-label space required text-end" for="basic-default-name">Date of Deposit</label>
                                    <div class="col-sm-4">
                                        @*<input type="date" asp-for="Depositdate" class="form-control" id="Depositdatetxt" name="Depositdatetxt" autocomplete="off" />*@
                                        <input type="date" asp-for="Depositdate" class="form-control" id="Depositdatetxt" name="" autocomplete="off" />
                                        <span asp-validation-for="Depositdate" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="mb-3 row">
                                    <label class="col-sm-2 col-form-label space required text-end" for="basic-default-name">Bank Name </label>
                                    <div class="col-sm-4">
                                        <input type="text" asp-for="BankName" class="form-control" id="BankNametxt" name="BankName" autocomplete="off" />
                                        <span asp-validation-for="BankName" class="text-danger"></span>
                                    </div>
                                    <label class="col-sm-2 col-form-label space required text-end">Branch Name </label>
                                    <div class="col-sm-4">
                                        <input type="text" asp-for="Branchname" class="form-control" id="Branchnametxt" name="Branchname" autocomplete="off" />
                                        <span asp-validation-for="Branchname" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="mb-3 row">
                                    <label for="FirstName" class="col-sm-2 col-form-label space required text-end">Account Number</label>
                                    <div class="col-sm-4">
                                        <input type="text" asp-for="Accountnumber" class="form-control" id="Accountnumbertxt" name="Accountnumber" autocomplete="off" />
                                        <span asp-validation-for="Accountnumber" class="text-danger"></span>
                                    </div>
                                    <label class="col-sm-2 col-form-label space text-end">Document </label>
                                    <div class="col-sm-4">
                                        <input type="file" asp-for="AttachedDocument" class="form-control" id="AttachedDocument" name="AttachedDocumenttxt" />
                                    </div>
                                </div>
                                <div class="mb-1 row">
                                    <label class="col-sm-1"></label>
                                    <label class="col-sm-12"> <b>Note:</b>You cannot upload more than 1Mb document. The document formats should be .doc or .docx or .pdf or .jpeg or .jpg or .png or .gif</label>
                                </div>
                                <div class="mb-3 row">
                                    <label for="FirstName" class="col-sm-2 col-form-label space text-end">Comments </label>
                                    <div class="col-sm-4">
                                        <textarea asp-for="Comments" class="form-control" id="Commentstxta" name="Comments" autocomplete="off"></textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="row justify-content-center text-center">
                                <div class="col-sm-12">
                                    <button type="reset" class="btn btn-warning waves-effect waves-light" id="Clearbtn">Clear</button>
                                    <button type="submit" class="btn btn-success waves-effect waves-light" id="submitbtn">Save</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>

