    $(document).ready(function () {
        $('.hideable').each(function () {
            debugger;
            var isAnyVisible = $('#Usersdiscounttbl .hideable:visible').length > 0;
            if (!isAnyVisible) {
                $(this).hide();
            }
        });
    });
</script>

