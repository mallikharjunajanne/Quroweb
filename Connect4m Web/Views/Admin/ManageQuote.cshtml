                                    <div class="col-3"></div>
                                    <div class="form-group col-2">
                                        <label class="form-grop control-label space">Quote </label>
                                    </div>
                                    <div class="form-group col-4">
                                       <input type="text"class="form-control" name="Quote" id="Quote" />
                                    </div>
                                    <div class="col-3"></div>
                                    <div class="col-3"></div>
                                    <div class="form-group col-2">
                                        <label class="form-grop control-label space">Display Date  </label>
                                    </div>
                                    <div class="form-group col-4">
                                     <input type="date" class="form-control" name="Displaydate" id="Displaydate"/>
                                    </div>
                                    <div class="col-3"></div>
                                    <div class="col-3"></div>                                   
                                    <div class="form-group col-2"></div>
                                    <div class="form-group col-4">
                                        <input type="button" id="Clearbtnquote" name="Clear" value="Clear" class="btn btn-pill btn-outline-warning btn-air-warning">
                                        <input type="button" id="Searchbtn" name="Search" value="Search" class="btn btn-pill btn-outline-success btn-air-success">
                                    </div>
                                    <div class="col-3"></div>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div id="ManageHolidaystbl_containerdivId">                      
                            <span id="Errmsg" class="text-danger" style="position: fixed; margin: -20px 10px 0px 5px; "></span>                      
                        <div class="col-12" id="accordionoc2">
                            <div class="card-header bg-primary">
                                <h5 class="mb-0">
                                    <button class="btn btn-link text-white" data-bs-toggle="collapse" data-bs-target="#collapseicon2" aria-expanded="true" aria-controls="collapse11">	YOUR SEARCH RESULTED <span id="Quote_Recordscount" style=" background-color: white; color: red; font-weight: 900; background-color: white; padding: 5px; border-radius: 16px;"></span> RECORDS.</button>
                                </h5>
                            </div>
                            <div class="collapse show" id="collapseicon2" aria-labelledby="collapseicon2" data-bs-parent="#accordionoc2">
                                <div class="rowheight">
                                    @*ManageHolidaystbl*@
                                    <table class="table table-bordered" id="ManageQuotestbl" style="background-color: whitesmoke; border-color: red; font-size: 11px;">
                                        <thead>
                                            <tr style="border-color: black;">
                                                <th style=" border-color: blue; width: 16px; " class="bg-primary;">SNO</th>
                                                <th style=" border-color: blue; width: 60%; " class="bg-primary">Quote</th>
                                                <th style=" border-color: blue; width: 63px;" class="bg-primary">Display Date</th>
                                                <th style=" border-color: blue; width: 0%;" class="bg-primary">Delete</th>                                              
                                            </tr>
                                        </thead>
                                        @*<tbody>            </tbody>*@
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="Managequotes_Insertdiv2">                    @*Manageholidays_Insertdiv2*@

