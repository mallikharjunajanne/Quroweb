                                                <input type="reset" value="Clear" class="btn btn-pill btn-outline-warning btn-awarning" id="clearform" />
                                                <input type="submit" value="Save" id="Save_MC" class="btn btn-pill btn-outline-success btn-auccess" />

                                                <input type="button" value="Next Page" id="Nextpage_MC" onclick="nextpage('SearchManageSubCatogory',null)" class="btn btn-pill btn-outline-info btn-air-info" />

                                                @*<button style=" padding: 6px;" class="btn btn-pill btn-outline-info btn-air-info" id="Nextpage_CSA">Next Page</button>*@


                                            </div>
