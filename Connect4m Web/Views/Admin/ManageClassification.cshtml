@model Connect4m_Web.Models.Attendenceproperites.UserScreen.ManageClassification
@{
    ViewData["Title"] = "ManageClassification";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card">
    <div class="card-body">
        <div class="default-according style-1" id="accordionoc">
            <div class="card">
                <h6><span>MANAGE DEPARTMENT</span></h6>

                <div class="card-header pb-0" id="Manageholidays_Heaingmaindiv0">
                    <button class="btn btn-pill btn-outline-primary btn-aprimary" style=" margin-left: 79%; border-radius: 15px; height: 35px; margin-bottom: 3px;" id="addnewmanagequotes">
                        Create Department
                    </button>
                </div>
                <div id="Manageclassificationmaindiv">
                    <div class="col-12" id="accordionoc1">
                        <div class="card-header bg-primary">
                            <h5 class="mb-0">
                                <button class="btn btn-link text-white" data-bs-toggle="collapse" data-bs-target="#collapseicon1" aria-expanded="true" aria-controls="collapse11" id="FlassNewsbtn">SEARCH DEPARTMENT</button>
                            </h5>
                        </div>
                        <div class="collapse show" id="collapseicon1" aria-labelledby="collapseicon1" data-bs-parent="#accordionoc1">
                            <div class="padding-search row" id="ManageHolidaysMaindivId">
                                <div class="row">
                                    <div class="col-3"></div>
                                    <div class="form-group col-2">
                                        <label class="form-grop control-label space">Department Name </label>
                                    </div>
                                    <div class="form-group col-4">
                                        <input type="text" class="form-control" name="DepartName" id="DepartName_txtid" />
                                    </div>
                                    <div class="col-3"></div>
                                    <div class="col-3"></div>
                                    <div class="form-group col-2">
                                        <label class="form-grop control-label space">Description  </label>
                                    </div>
                                    <div class="form-group col-4">
                                       <textarea class="form-control" id="Descriptiontxtid"></textarea>
                                    </div>
                                    <div class="col-3"></div>
                                    <div class="col-3"></div>
                                    <div class="form-group col-2"></div>
                                    <div class="form-group col-4">
                                        <input type="button" id="Mainview_Clearbtn" name="Clear" value="Clear" class="btn btn-pill btn-outline-warning btn-air-warning">
                                        <input type="button" id="Mainview_Searchbtn" name="Search" value="Search" class="btn btn-pill btn-outline-success btn-air-success">
                                    </div>
                                    <div class="col-3"></div>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div id="Manageclassification_containerdivId">
                        <span id="Errmsg" class="text-danger" style="position: absolute; margin: -20px 10px 0px 5px; "></span>
                        <div class="col-12" id="accordionoc2">
                            <div class="card-header bg-primary">
                                <h5 class="mb-0">
                                    <button class="btn btn-link text-white" data-bs-toggle="collapse" data-bs-target="#collapseicon2" aria-expanded="true" aria-controls="collapse11">	YOUR SEARCH RESULTED <span id="Classification_Recordscount" style=" background-color: white; color: red; font-weight: 900; background-color: white; padding: 5px; border-radius: 16px;"></span> RECORDS.</button>
                                </h5>
                            </div>
                            <div class="collapse show" id="collapseicon2" aria-labelledby="collapseicon2" data-bs-parent="#accordionoc2">
                                <div class="rowheight">
                                  <table class="table table-bordered" id="ManageClassificationtbl" style="background-color: whitesmoke; border-color: red; font-size: 11px;">
                                        <thead>
                                            <tr style="border-color: black;">
                                                <th style=" border-color: blue; width: 16px; " class="bg-primary;">SNO</th>
                                                <th style=" border-color: blue; width: 60%; " class="bg-primary">Department</th>
                                                <th style=" border-color: blue; width: 63px;" class="bg-primary">Description</th>
                                                <th style=" border-color: blue; width: 0%;" class="bg-primary">Delete</th>
                                            </tr>
                                        </thead>
                                        @*<tbody>            </tbody>*@
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="Manageclassification_Insertdiv2">

                </div>
                <div id="Manageclassification_Updatediv3">

                </div>               
            </div>
        </div>
    </div>
</div>


<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
