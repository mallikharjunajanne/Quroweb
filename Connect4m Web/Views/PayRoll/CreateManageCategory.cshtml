                                                <input asp-for="PayrollCategoryName" class="form-control" />


                                                <span asp-validation-for="PayrollCategoryName" class="text-danger"></span>

                                            </div>
                                            <div class="col-3"></div>  <div class="col-3"></div>
                                            <div class="form-group col-2">
                                                <label asp-for="PayrollCategoryDescription" class="control-label  space"></label>
                                            </div>
