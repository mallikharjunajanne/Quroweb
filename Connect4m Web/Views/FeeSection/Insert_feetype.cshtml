@model Connect4m_Web.Models.Attendenceproperites.Feetypes

@{
    ViewData["Title"] = "Insert Fee Type";
    //Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = null;
}

<div class="col-md-12 col-lg-12 mb-3">
    <div class="card mb-4">
        <div class="card-header d-flex align-items-center justify-content-between">
            <h5 class="mb-0"><span id="Heading_sptxt">SAVE FEE TYPE</span></h5><small class="text-muted float-end">* INDICATES REQUIRED FIELDS</small>
        </div>
        <div class="card-body">
            <form id="Feetypeform" enctype="multipart/form-data">
                <div class="row">
                    <div class="row mb-3">
                        <div class="row mb-3">
                            <label class="col-sm-4 col-form-label space text-end required" for="basic-default-name">Fee Type</label>
                            <div class="col-sm-4">
                                <input type="text" asp-for="FeeType" class="form-control" id="Feetypetxt" />
                                <span asp-validation-for="FeeType" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label class="col-sm-4 col-form-label space text-end required" for="basic-default-name">Fee Type is for</label>
                            <div class="col-sm-4">
                                <div class="form-check form-check-primary ">
                                    <input class="form-check-input" asp-for="Feetypestatus" name="Feetypestatus" type="radio" value="1" id="rdolstFeeTypeStatus_0" checked>
                                    <label class="form-check-label">
                                        Current Academic Year Payments
                                    </label>
                                </div><div class="form-check form-check-primary ">
                                    <input class="form-check-input" asp-for="Feetypestatus" name="Feetypestatus" type="radio" value="0" id="rdolstFeeTypeStatus_1">
                                    <label class="form-check-label">
                                        Previous Academic Year Dues
                                    </label>
                                </div>
                                <span asp-validation-for="Feetypestatus" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-4 col-form-label space text-end" for="basic-default-name">Discount Types</label>
                            <div class="col-sm-4">
                                @Html.ListBox("ConcedingtypeIds", ViewBag.ConcedingTypes as SelectList, new { @class = "select2 form-select select2-hidden-accessible", @id = "lstConcedingtypes" })
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-4 col-form-label space text-end" for="basic-default-name">Quantity </label>
                            <div class="col-sm-4">
                                <div class="form-check form-check-primary ">
                                    <input class="form-check-input" name="Qunatityradio" type="radio" value="0" id="rbtnlQuantity_0" checked>
                                    <label class="form-check-label">
                                        No
                                    </label>
                                </div><div class="form-check form-check-primary ">
                                    <input class="form-check-input" name="Qunatityradio" type="radio" value="1" id="rbtnlQuantity_1">
                                    <label class="form-check-label">
                                        Yes
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3" id="Amounttxtdiv" style=" display:none;">
                            <label class="col-sm-4 col-form-label space text-end" for="basic-default-name">Amount </label>
                            <div class="col-sm-4">
                                <input type="text" asp-for="Amount" class="form-control" id="Amounttxt" />
                                <span class="text-danger" id="AmountError"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-4 col-form-label space text-end" for="basic-default-name">Description  </label>
                            <div class="col-sm-4">
                                <textarea class="form-control" asp-for="Description" id="descriptiontxt"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="row justify-content-center text-center">
                        <div class="col-sm-12">
                            <div class="col-sm-12">
                                <button type="button" class="btn btn-info waves-effect waves-light" onclick="previouspages('ManageFeeConcedingTypes',null)">Previous Page</button>
                                <button type="reset" class="btn btn-warning waves-effect waves-light" onclick="clearForm('Feetypeform')" id="btnClear">Clear</button>
                                <button type="button" class="btn btn-dark waves-effect waves-light" id="Svbacktosearchbtn">Back To Search</button>
                                <button type="submit" class="btn btn-success waves-effect waves-light" id="savebtn">Save</button>
                                <button type="button" class="btn btn-primary waves-effect waves-light" onclick="nextpages('ManageFeeTerms',null)">Next Page</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>



<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js" type="text/javascript"></script>

<script src="~/js/Managefeetypes1.js"></script>
