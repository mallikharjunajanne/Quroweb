@model Connect4m_Web.Models.Attendenceproperites.UserScreen.Manageholidays
@{
    ViewData["Title"] = "ManageHolidays";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <div class="default-according style-1" id="accordionoc">
            <div class="card">
                <h6><span>MANAGE HOLIDAYS</span></h6>

                <div class="card-header pb-0" id="Manageholidays_Heaingmaindiv0">
                    <button class="btn btn-pill btn-outline-primary btn-aprimary" style=" margin-left: 82%; border-radius: 15px; height: 35px; margin-bottom: 3px;" id="addnewmanageholidays">
                        Create Holiday
                    </button>
                </div>
                <div id="Manageholidays_Main1">
                    <div class="col-12" id="accordionoc1">
                        <div class="card-header bg-primary">
                            <h5 class="mb-0">
                                <button class="btn btn-link text-white" data-bs-toggle="collapse" data-bs-target="#collapseicon1" aria-expanded="true" aria-controls="collapse11" id="FlassNewsbtn">HOLIDAYS DETAILS</button>
                            </h5>
                        </div>
                        <div class="collapse show" id="collapseicon1" aria-labelledby="collapseicon1" data-bs-parent="#accordionoc1">
                            <div class="padding-search row" id="ManageHolidaysMaindivId">
                                <div class="row">
                                    <div class="col-3"></div>
                                    <div class="form-group col-2">
                                        <label class="form-grop control-label space">Year </label>
                                    </div>
                                    <div class="form-group col-4">
                                        <select class="form-select" id="Year" style="width:90%;">
                                            <option value="">---------Select---------</option>
                                            <option value="2009">2009</option>
                                            <option value="2010">2010</option>
                                            <option value="2011">2011</option>
                                            <option value="2012">2012</option>
                                            <option value="2013">2013</option>
                                            <option value="2014">2014</option>
                                            <option value="2015">2015</option>
                                            <option value="2016">2016</option>
                                            <option value="2017">2017</option>
                                            <option value="2018">2018</option>
                                            <option value="2019">2019</option>
                                            <option value="2020">2020</option>
                                            <option value="2021">2021</option>
                                            <option value="2022">2022</option>
                                            <option value="2023">2023</option>
                                        </select>
                                    </div>
                                    <div class="col-3"></div>
                                    <div class="col-3"></div>
                                    <div class="form-group col-2">
                                        <label class="form-grop control-label space">Month </label>
                                    </div>
                                    <div class="form-group col-4">
                                        <select class="form-select" id="Month" style="width:90%;">
                                            <option value="">---------Select---------</option>
                                            <option value="01">January</option>
                                            <option value="02">February</option>
                                            <option value="03">March</option>
                                            <option value="04">April</option>
                                            <option value="05">May</option>
                                            <option value="06">June</option>
                                            <option value="07">July</option>
                                            <option value="08">August</option>
                                            <option value="09">September</option>
                                            <option value="10">October</option>
                                            <option value="11">November</option>
                                            <option value="12">December</option>
                                        </select>
                                    </div>
                                    <div class="col-3"></div>
                                    <div class="col-3"></div>
                                    <div class="form-group col-2">
                                        <label class="form-grop control-label space">Holiday Type </label>
                                    </div>
                                    <div class="form-group col-6 radio radio-success">
                                        <input id="radio1" type="radio" name="radio1" value="1">
                                        <label for="radio1">Holidays</label>
                                        <input id="radio2" type="radio" name="radio1" value="2">
                                        <label for="radio2">Week-Ends</label>
                                        <input id="radio3" type="radio" name="radio1" value="3">
                                        <label for="radio3">Restricted Holidays</label>
                                    </div>
                                    <div class="col-3"></div>
                                    <div class="form-group col-2"></div>
                                    <div class="form-group col-4">
                                        <input type="button" name="Clear" value="Clear" class="btn btn-pill btn-outline-warning btn-air-warning">
                                        <input type="button" id="Searchbtn" name="Search" value="Search" class="btn btn-pill btn-outline-success btn-air-success">
                                    </div>
                                    <div class="col-3"></div>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div id="ManageHolidaystbl_containerdivId">
                        <div class="col-12" id="accordionoc2">
                            <div class="card-header bg-primary">
                                <h5 class="mb-0">
                                    <button class="btn btn-link text-white" data-bs-toggle="collapse" data-bs-target="#collapseicon2" aria-expanded="true" aria-controls="collapse11">YOUR SEARCH RESULTED <span id="Holidays_Recordscount" style=" background-color: white; color: red; font-weight: 900; background-color: white; padding: 5px; border-radius: 16px;"></span> RECORD(S).</button>
                                </h5>
                            </div>
                            <div class="collapse show" id="collapseicon2" aria-labelledby="collapseicon2" data-bs-parent="#accordionoc2">
                                <div class="rowheight">
                                    <table class="table table-bordered" id="ManageHolidaystbl" style="background-color: whitesmoke; border-color: red; font-size: 11px;">
                                        <thead>
                                            <tr style="border-color: black;">
                                                <th style=" border-color: blue" class="bg-primary">SNO</th>
                                                <th style=" border-color: blue" class="bg-primary">Holiday Name</th>
                                                <th style=" border-color: blue" class="bg-primary">Holiday Type</th>
                                                <th style=" border-color: blue" class="bg-primary">Start Date</th>
                                                <th style=" border-color: blue" class="bg-primary">End Date</th>
                                                <th style=" border-color: blue" class="bg-primary">Number Of Days</th>
                                                <th style=" border-color: blue" class="bg-primary">Status</th>
                                                <th style=" border-color: blue" class="bg-primary">Delete</th>
                                            </tr>
                                        </thead>
                                        @*<tbody>
                                </tbody>*@
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="Manageholidays_Insertdiv2">

                </div>
                <div id="Manageholidays_Updatediv3">

                </div>
                <div id="Manageholidays_MailSMSPostingdiv4">

                </div>
            </div>
        </div>
    </div>
</div>


