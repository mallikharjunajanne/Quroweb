@model Connect4m_Web.Models.Attendenceproperites.UserScreen.ManageClassification
@{
    ViewData["Title"] = "Update_Classification";
    Layout = null;
}


<div class="col-md-12 col-lg-12 mb-3">
    <div class="card mb-4">
        <span id="Errormessage" class="text-danger"></span>
        <div class="card-header d-flex align-items-center justify-content-between">
            <h5 class="mb-0">
                UPDATE DEPARTMENT
            </h5><small>* INDICATES REQUIRED FIELDS</small>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col">
                    <form id="UpdateClassification_formid" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row mb-3">
                            <label class="control-label col-sm-4 col-form-label required text-end space">Department Name  </label>
                            <div class="col-sm-4">
                                <input type="hidden" asp-for="InstanceClassificationId" id="Classificationtxtid" />
                                <input type="text" asp-for="ClassificationName" id="ClassificationNametxtid" class="form-control" />
                                <span asp-validation-for="ClassificationName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="control-label col-sm-4 col-form-label space text-end">Description  </label>
                            <div class="col-sm-4">
                                <textarea class="form-control" asp-for="ClassificationDescription" id="Description_txtid"></textarea>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="control-label col-sm-4 col-form-label required  space text-end">Attendance Effective Date  </label>
                            <div class="col-sm-4">
                                <input type="date" asp-for="StartDate " id="StartDate_txtid" class="form-control" />
                                <span asp-validation-for="StartDate" class="text-danger" id="Error_Sp"></span>
                                <span class="text-danger" id="Error_Sp"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="control-label col-sm-4 col-form-label required  space text-end">Attendance End Date  </label>
                            <div class="col-sm-4">
                                <input type="date" asp-for="EndDate" id="EndDate_txtid" class="form-control" />
                                <span asp-validation-for="EndDate" class="text-danger" id="Error_Sp"></span>
                                <span class="text-danger" id="Error_Sp"></span>
                            </div>
                        </div>
                        <div class="row justify-content text-center">
                            <div class="col-sm-12">
                                <button type="reset" class="btn btn-warning waves-effect waves-light"id="Update_Dltbtn">Delete</button>                              
                                <button type="button" class="btn btn-dark waves-effect waves-light" id="Uptobacktosearchbtn">BackToSearch</button>
                                <button type="submit" class="btn btn-success waves-effect waves-light" id="Update_upbtn">Update</button>
                            </div>
                        </div>

                       
                                    @*<input type="button" id="Update_Dltbtn" name="Delete" value="Delete" class="btn btn-pill btn-outline-danger btn-air-danger">
                                    <input type="button" id="Update_BackToSearchbtn" name="BackToSearch" value="BackToSearch" class="btn btn-pill btn-outline-primary btn-aprimary">
                                    <input type="submit" id="Update_upbtn" name="Update" value="Update" class="btn btn-pill btn-outline-success btn-air-success">
                                </div>
                                <div class="col-3"></div>
                            </div>
                        </div>*@
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/Datatable/jquery.dataTables.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js" type="text/javascript"></script>
