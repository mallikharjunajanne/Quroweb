@model Connect4m_Web.Models.Attendenceproperites.UserScreen.Managequote

@{
    ViewData["Title"] = "Insert_Quote";
    Layout = null;

}


<div class="col-md-12 col-lg-12 mb-3">
    <span id="Errormessages" class="text-danger"></span>
    <div class="card mb-4">
        <div class="card-header d-flex align-items-center justify-content-between">
            <h5 class="mb-0">
                SAVE QUOTE
            </h5><small>* INDICATES REQUIRED FIELDS</small>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col" id="ManageHolidaysMaindivId">
                    <form id="InsertQuote" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row mb-3">
                            <label class="control-label col-sm-4 col-form-label required text-end space">Quote</label>
                            <div class="col-sm-4">
                                <input type="text" asp-for="Quote" id="Quote" class="form-control" />
                                <span asp-validation-for="Quote" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="control-label col-sm-4 col-form-label required text-end space">Display Date </label>
                            <div class="col-sm-4">
                                <input type="date" asp-for="DisplayDate_" id="Displaydate_txtid" class="form-control" />
                                <span asp-validation-for="DisplayDate_" class="text-danger" id="Error_Sp"></span>
                                <span class="text-danger" id="Error_Sp"></span>
                            </div>
                        </div>
                        <div class="row justify-content text-center">
                            <div class="col-sm-12">
                                <button type="reset" class="btn btn-warning waves-effect waves-light" id="Insert_Clearbtn">Clear</button>
                                <button type="button" class="btn btn-dark waves-effect waves-light" id="Insert_BackToSearchbtn">BackToSearch</button>
                                <button type="submit" class="btn btn-success waves-effect waves-light" id="Insert_Savebtn">Save</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>





<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js" type="text/javascript"></script>

<script src="~/js/Managequote.js"></script>
