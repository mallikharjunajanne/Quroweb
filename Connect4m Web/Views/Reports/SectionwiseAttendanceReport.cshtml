@model Connect4m_Web.Models.Attendenceproperites.ClasswisestudentattendanceReport
@{
    // ViewData["Title"] = "SectionwiseAttendanceReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
</head>
<body>
    <div class="flex-grow-1 container-p-y container-fluid">
        <h4 class="py-3 mb-4"><span class="text-muted fw-light">Reports /</span>CLASS WISE & STUDENT WISE ATTENDANCE REPORT</h4>
        <div class="row mb-2">
            <div class="col-md-12 col-lg-12 mb-3">
                <span class="ErrorMessageSpan" id="Main_Span_Error"></span>
                <div class="card mb-4" id="PayementdetailsSearchpagemaindiv">
                    <div class="card-header d-flex align-items-center justify-content-between">
                        <h5 class="mb-0">
                            <span id="AddNewText_Span_CreatePage">
                                SEARCH USERS
                            </span>
                        </h5> <small class="text-muted float-end">* INDICATES MANDATORY FIELD</small>
                    </div>
                    <div class="card-body" id="CreateNewSubjectsDiv">
                        <form id="Classswisetudentwiseattendancereport" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col">
                                    <div class="row mb-3">
                                        <label class="col-sm-2 col-form-label text-end required space" for="basic-default-name">Department </label>
                                        <div class="col-sm-4">
                                            <div class="position-relative">
                                                <select multiple class="form-select" id="DdlDepartment" asp-for="ClassificationId">
                                                    @*onchange="CommonDropdownFunction('GET', '/Attendance/DdlClassId_Calingfunction?InstanceClassificationId=' + this.value, 'DdlClass', 'Please select a Class', true)"*@
                                                </select>
                                            </div>
                                            <span asp-validation-for="ClassificationId" class="text-danger"></span>
                                            <div class="justify-content: space-between; align-items: center;" style="display:flex;">
                                                <a href="javascript:void(0)" id="DepartmentSearchClearlink" class="text-end">Clear Selection</a>
                                                <div class="form-check">
                                                    <input type="checkbox" class="form-check-input" id="SelectAllDepartmentsChk" />
                                                    <label class="form-check-label" for="SelectAllDepartmentsChk">Select All</label>
                                                </div>
                                            </div>
                                        </div>
                                        <label class="col-sm-2 col-form-label text-end required space" for="basic-default-name">Class</label>
                                        <div class="col-sm-4">
                                            <div class="position-relative">
                                                <select multiple class="form-select" id="DdlClass" asp-for="SubClassificationId">
                                                </select>
                                            </div> <span asp-validation-for="SubClassificationId" class="text-danger"></span>
                                            <div class="justify-content: space-between; align-items: center;" style="display:flex;">
                                                <a href="javascript:void(0)" id="ClassSearchClearlink" class="text-end">Clear Selection</a>
                                                <div class="form-check">
                                                    <input type="checkbox" class="form-check-input" id="Selectallsubclasschk" />
                                                    <label class="form-check-label" for="Onlydues">Select All</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <label class="col-sm-2 col-form-label text-end required space" for="basic-default-name">From Date </label>
                                        <div class="col-sm-4">
                                            <input type="date" class="form-control" asp-for="StartDate" id="Startdatetxt" />
                                            <span asp-validation-for="StartDate" class="text-danger"></span>
                                            <span id="Errormessage" class="text-danger"></span>
                                        </div>
                                        <label class="col-sm-2 col-form-label text-end required space" for="basic-default-name">To Date </label>
                                        <div class="col-sm-4">
                                            <input type="date" class="form-control" asp-for="EndDate" id="Enddatetxt" />
                                            <span asp-validation-for="EndDate" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row justify-content-center">
                                        <div class="col-sm-12">
                                            <button type="reset" class="btn btn-warning waves-effect waves-light" id="BtnClear">Clear</button>
                                            <button type="submit" class="btn btn-success waves-effect waves-light" id="Btnsearch">Search</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

<div id="Appendsclasswiseandstudentwiseattendancereportdiv"></div>


<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js" type="text/javascript"></script>

