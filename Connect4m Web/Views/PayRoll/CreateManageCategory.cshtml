                                            <div class="col-3"></div>
                                            <div class="form-group col-2">


                                                <label asp-for="isLeaveApplicable" class="control-label required space"></label>
                                                @*<i class="fa fa-asterisk" style="font-size:11px;color:red"></i>*@

                                            </div>
                                            <div class="form-group col-4" style="display:flex">


                                                <input asp-for="isLeaveApplicable" type="radio" name="isLeaveApplicable" value="0" style="flex: 0.5;" checked /><span>PayRoll</span>
