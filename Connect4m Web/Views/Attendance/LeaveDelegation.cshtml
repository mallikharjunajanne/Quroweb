    <div class="popup" id="deletePopup">
        <div class="popup-content">
            <div class="container" id="SuccessFulDiv">
                <div class="circle">
                    <div class="checkmark" style=" color: #2ecc71;"></div>
                </div>
                <h4 id="SuccessMessageid" style="color: #2ecc71;"></h4>
            </div>
            <div id="ConformationDiv">
                <i class="fa fa-exclamation-circle" style="font-size:48px;color:red"></i>
                <p id="ConfirmMessageid" style="color:black;font-size:17px;"></p>
                <button id="confirmDeleteButton" onclick="confirmDeleteButtonCallingFun()" style="color: white; background-color: cadetblue;">Yes, Delete</button>
                <button id="cancelDeleteButton" onclick="cancelDeleteButtonFunction()">Cancel</button>
                <input type="hidden" id="PopupTrid" />
            </div>
            <button id="OKButton" onclick="cancelDeleteButtonFunction()" style="background-color: chocolate; color: white; padding: 5px 36px; ">Ok</button>
        </div>
    </div>

    @*@Html.Partial("_SearchLeaveTypePagePartialView")*@
