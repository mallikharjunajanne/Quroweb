@model Connect4m_Web.Models.Attendenceproperites.AttendancePost
@{
    ViewData["Title"] = "AttendancePosting";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>
<html>
<head>
    @*<link href="~/css/PostAttendance.css" rel="stylesheet" />*@
</head>
<body>
    <div class="flex-grow-1 container-p-y container-fluid">
        <h4 class="py-3 mb-4"><span class="text-muted fw-light">Attendance /</span>ATTENDANCE POSTING </h4>
        <div class="row mb-2">
            <div class="col-md-12 col-lg-12 mb-3">
                <div class="card mb-4">
                    <div class="card-header d-flex align-items-center justify-content-between">
                        <h5 class="mb-0">
                            SEARCH FOR STUDENTS
                        </h5> <small class="text-muted float-end">* INDICATES MANDATORY FIELD</small>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col">
                                <form id="Attendancepostingform">
                                    <div class="row mb-3">
                                        <label asp-for="StartDate" class="control-label col-sm-4 col-form-label text-end required space">Start Date</label>
                                        <div class="col-sm-4">
                                            <input type="date" id="StartDateid" asp-for="StartDate" class="form-control">
                                            <span asp-validation-for="StartDate" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="row mb-3">
                                        <label asp-for="InstanceClassificationId" class="control-label col-sm-4 col-form-label text-end required space">Department </label>
                                        <div class="col-sm-4">
                                            <div class="position-relative" id="F_IN_Class">
                                                <select class="select2 form-select select2-hidden-accessible" id="Ddldepartment" asp-for="InstanceClassificationId">
                                                </select>
                                                <span asp-validation-for="InstanceClassificationId" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <label asp-for="InstanceSubClassificationId" class="control-label col-sm-4 col-form-label text-end required space">Class </label>
                                        <div class="col-sm-4">
                                            <div class="position-relative" id="F_IN_SubId">
                                                <select class="select2 form-select select2-hidden-accessible" id="DdlSubClass" asp-for="InstanceSubClassificationId">
                                                </select>
                                                <span asp-validation-for="InstanceSubClassificationId" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row mb-3">
                                        <label asp-for="Period" class="control-label col-sm-4 col-form-label text-end required space">Period </label>
                                        <div class="col-sm-4">
                                            <div class="position-relative">
                                                <select class="select2 form-select select2-hidden-accessible" id="DdlSubClass" asp-for="Period">
                                                    <option value="">---------Select---------</option>
                                                    <option value="1">P1</option>
                                                    <option value="2">P2</option>
                                                    <option value="3">P3</option>
                                                    <option value="4">P4</option>
                                                    <option value="5">P5</option>
                                                    <option value="6">P6</option>
                                                    <option value="7">P7</option>
                                                    <option value="8">P8</option>
                                                </select>
                                                <span asp-validation-for="Period" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row mb-3">
                                        <label asp-for="MentorUserid" class="control-label col-sm-4 col-form-label text-end required space">Faculty </label>
                                        <div class="col-sm-4">
                                            <div class="position-relative">
                                                <select class="select2 form-select select2-hidden-accessible" id="Ddfaculty" asp-for="MentorUserid">
                                                </select>
                                                <span asp-validation-for="MentorUserid" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <label asp-for="SubjectSlotID" class="control-label col-sm-4 col-form-label text-end required space">Slot</label>
                                        <div class="col-sm-4">
                                            <div class="position-relative">
                                                <select class="select2 form-select select2-hidden-accessible" id="Ddslotsid" asp-for="SubjectSlotID">
                                                </select>
                                                <span asp-validation-for="SubjectSlotID" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <label class="control-label col-sm-4 col-form-label text-end  space">Sort By</label>
                                        <div class="col-1 form-check">
                                            <input type="radio" asp-for="Radiovalue" value="0" name="RadioSearch" class="form-check-input" id="defaultRadio1">
                                            <label class="form-check-label" for="defaultRadio1">Name</label>
                                        </div>
                                        <div class="col-2 form-check">
                                            <input type="radio" asp-for="Radiovalue" value="1" name="RadioSearch" class="form-check-input" id="defaultRadio2">
                                            <label class="form-check-label" for="defaultRadio2">Register No</label>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <label class="control-label col-sm-4 col-form-label text-end"></label>
                                        <div class="col-sm-4">
                                            <input type="checkbox" asp-for="Checkboxvalue" class="form-check-input checkbox_animated" id="chk_seacrh_icon">
                                            <label class="form-check-label " for="showallsubjects" id="chk_seacrh_icon">Show On Duty</label>
                                        </div>
                                    </div>
                                    <div class="row justify-content text-center">
                                        <div class="col-sm-12">
                                            <button type="reset" class="btn btn-warning waves-effect waves-light" onclick="CommonClearFunction('attendancesummaryform')" id="BtnClear">Clear</button>
                                            <button type="submit" class="btn btn-success waves-effect waves-light" id="Get_atd_btn">Get Attendance Form</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div id="Appendingdivcontainer">

            </div>
        </div>
    </div>
</body>
</html>


<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://code.jquery.com/ui/1.13.0/jquery-ui.min.js"></script>
<script src="~/js/Postingattendance.js"></script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
