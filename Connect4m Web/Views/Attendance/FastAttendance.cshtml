@model Connect4m_Web.Models.Attendenceproperites.FastAttendance

@{
    ViewData["Title"] = "FastAttendance";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>
<html>
<head>
    <style>
        .validation {
            font-size: 11px;
            margin-left: 3%;
            color: red;
            display: block;
        }

        InDate {
            width: 36%;
            border-right: #b4b4b4 1px solid;
            border-top: #b4b4b4 1px solid;
            font-weight: normal;
            font-size: 10px;
            border-left: #b4b4b4 1px solid;
            color: #000000;
            border-bottom: #b4b4b4 1px solid;
            font-family: Verdana, Arial, Helvetica, sans-serif;
        }
    </style>

    <link href="~/css/FastAttedance.css" rel="stylesheet" />
</head>
<body>
    <div class="card">
        <div class="card-header pb-0">
            <h6><span>Fast Attendance</span></h6>
            <div class="validation" id="ValidationMsg_id">
                <span id="validation2"></span><br />
                <span id="validation1"></span>
                <span id="validation3"></span>
            </div>
        </div>
        <div class="card-body">
            <div class="default-according style-1" id="accordionoc">
                <div class="card">
                    <div style="color: red; font-size: 13px;">
                        <p id="ErrorMessage" style="font-size: 12px;"></p>
                    </div>
                    <div class="card-header bg-primary">
                        <h5 class="mb-0">
                            <button class="FastAd_HeaderBtn collapsed btn btn-link text-white" data-bs-toggle="collapse" data-bs-target="#collapseicon" aria-expanded="true" aria-controls="collapse11" style="width: 99%;">SEARCH FOR STUDENTS</button>
                            @*<button class="btn btn-link text-white collapsed" data-bs-toggle="collapse" data-bs-target="#collapseicon" aria-expanded="true" aria-controls="collapse11"><i class="icofont icofont-student-alt"></i>SEARCH FOR STUDENTS</button>*@
                        </h5>
                    </div>
                    <div class="collapse show" id="collapseicon" aria-labelledby="collapseicon" data-bs-parent="#accordionoc" style="">
                        <div class="card-body">
                            <div class="row">
                                <form id="F_At_Main_Form">
                                    <div class="form-group row padding-search">
                                        <div class="row">
                                            @*<div class=" row">*@
                                            <div class="col-3"></div>
                                            <div class="form-group col-2">
                                                <label asp-for="StartDate" class="form-label required space">Start Date </label>
                                            </div>
                                            <div class="form-group col-4">
                                                <input type="date" id="FA_StartdateId1" asp-for="StartDate" class="form-control  Datetxtbox">
                                            </div>
                                            <div class="col-3"></div>

                                            <div class="col-3"></div>
                                            <div class="form-group col-2">
                                                <label asp-for="InstanceClassificationId" class="form-label required space">Department</label>
                                            </div>
                                            <div class="form-group col-4" id="F_IN_Class">
                                                @Html.DropDownListFor(Model => Model.InstanceClassificationId, new SelectList(ViewBag.Names, "Value", "Text"), "--Select--", new { @id = "F_IC_Id", @class = "form-select DropTxtbox" })
                                            </div>
                                            <div class="col-3"></div>


                                            <div class="col-3"></div>
                                            <div class="form-group  col-2">
                                                <label asp-for="InstanceSubClassificationId" class="form-label required space" style="margin-top: 14px;">Class </label>
                                            </div>
                                            <div class="form-group  col-4" id="F_IN_SubId">
                                                @Html.ListBoxFor(Model => Model.InstanceSubClassificationId, new SelectList(string.Empty, "Value", "Text"), new { @id = "F_IC_Sub_Id", @class = "form-select Droplistbox" })
                                            </div>
                                            <div class="col-3"></div>

                                            <div class="col-3"></div>
                                            <div class="form-group  col-2">
                                                <label asp-for="SlotId" class="form-label required space">Slot </label>
                                            </div>
                                            <div class="form-group  col-4" id="F_SlotId" style=" margin-top: 4px;">
                                                @{
                                                    var slotSubjectnames = ViewBag.Slot_Subjectnames as List<FastAttendance>;
                                                    var dropdownList = new SelectList(slotSubjectnames, "SlotId", "SlotName");
                                                }

                                                @Html.DropDownList("SubjectSlotID", dropdownList, "--Select Slot--", new { id = "myDropdown", @class = "form-select DropTxtbox" })
                                            </div>
                                            <div class="col-3"></div>


                                            <div class="col-3"></div>
                                            <div class="col-2"></div>
                                            <div class="col-4">
                                                <button class="btn btn-pill btn-outline-success btn-air-success" type="submit">Get Attendance Form</button>
                                            </div>

                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div id="Fast_Attendance_Table_data">

        </div>


        <input type="hidden" value="@ViewBag.LoginUserId" id="Lg_UserId_FastTxtid" />


    </div>


</body>
</html>

