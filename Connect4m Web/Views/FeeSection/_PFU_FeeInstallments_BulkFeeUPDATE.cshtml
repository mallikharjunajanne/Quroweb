    document.getElementById("Print_Matrix_Button").addEventListener("click", function () {
        // Open a new blank window
        var printWindow = window.open('', '', 'width=600,height=600');

        // Populate the new window with an HTML document
        printWindow.document.open();
        printWindow.document.write('<html><head><title>Print</title>');

        // Include the CSS stylesheet in the new window
        printWindow.document.write('<link rel="stylesheet" type="text/css" href="styles.css">');

        printWindow.document.write('</head><body>');

        // Get the content of the div by its id
        var content = document.getElementById("MatricChallanaPrint").outerHTML;

        // Write the content to the new window
        printWindow.document.write(content);

        printWindow.document.write('</body></html>');
        printWindow.document.close();

        // Trigger the print function in the new window
        printWindow.print();
        printWindow.close();
    });

