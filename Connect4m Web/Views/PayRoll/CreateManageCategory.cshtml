                                                <input asp-for="isLeaveApplicable" type="radio" name="isLeaveApplicable" value="2" style="flex: 0.5;" /><span>Both</span>


                                                <span asp-validation-for="isLeaveApplicable" class="text-danger"></span>
                                            </div>
                                            <div class="col-3"></div>  <div class="col-3"></div>
                                            <div style=" display: flex; gap: 17px;">
