@model Connect4m_Web.Models.Attendenceproperites.UserScreen.NoticeTypes

<div class="default-according style-1" id="accordionoc4">
    <div class="card" style="margin-bottom: 10px;">
      <div style="color:red; font-size:13px;">
          <span id="Savevalidation"></span>
          <span id="SavevalidationMessage"></span>
      </div>
        <div class="card-header bg-primary">
            <h5 class="mb-0">
                <button class="collapsed btn btn-link text-white" data-bs-toggle="collapse" data-bs-target="#collapseicon4" aria-expanded="true" aria-controls="collapse11" style="width:99%;">
                    <span class="Header_text_span">
                        SAVE NOTICE
                    </span>
                </button>
            </h5>
        </div>
        <div class="collapse show" id="collapseicon4" aria-labelledby="collapseicon4" data-bs-parent="#accordionoc4" style="">
            <div class="card-body">
                <form id="CreateNoticeType">
                    <div class="row">
                        <div class="row">
                            <div class="col-3"></div>
                            <div class="form-group col-2" style=" text-align: right;"><label class="form-grop" style=" margin-left: 13px;"><font class="Required">*</font>Notice Type :</label></div>
                            <div class="form-group col-4">
                                <input type="hidden" asp-for="InstanceId" id="Instance_STxt" value="@ViewBag.InstanceId" />
                                <input type="hidden" asp-for="UserId" id="Userid_STxt" value="@ViewBag.Userid" />

                                <select id="ENoticeTypeId_STXT" asp-for="ENoticeTypeId" class="NoticeTypedd">
                                    <option value="">---Select----</option>
                                </select>
                            </div>
                            <div class="col-3"></div>
                            <div class="col-3"></div>
                            <div class="form-group col-2" style=" text-align: right;"><label class="form-grop" style=" margin: 13px 0px 0px 0px;"><font class="Required">*</font>Notice Subject  :</label>                                    </div>
                            <div class="form-group col-4"> <textarea id="Subject_STXT" asp-for="Subject" style="height: 60px; width: 300px;"></textarea></div>
                            <div class="col-3"></div>
                            <div class="col-3"></div>
                            <div class="form-group col-2" style=" text-align: right;"><label style=" margin: 13px 0px 0px 25px; " class="form-grop">Description  :</label></div>
                            <div class="form-group col-4">
                                <textarea asp-for="ENoticeDescription" id="ENoticeDescription_STXT" style="height: 60px; width: 300px;"></textarea>
                                @* <div><span id="RemainingCharCount">1000</span> Character(s) remaining. Typed Characters: <span id="TypedCharCount">0</span></div>*@
                            </div>
                            <div class="col-3"></div>

                            <div class="col-3"></div>
                            <div class="col-2" style=" text-align: right;"></div>
                            <div class="col-4"> <span style=" font: 13px arial;">Note:-Following characters are restricted: "</span></div>
                            <div class="col-3"></div>

                            <div class="col-3"></div>
                            <div class="form-group col-2" style=" text-align: right;"><label style=" margin-left: 25px; " class="form-grop"><font class="Required">*</font>Start Date  :</label></div>
                            <div class="form-group col-4">  <input type="date" asp-for="StartDate" id="StartDate_STXT" /></div>
                            <div class="col-3"></div>
                            <div class="col-3"></div>
                            <div class="form-group col-2" style=" text-align: right;"><label style=" margin-left: -46px;" class="form-grop"><font class="Required">*</font>End Date(Expiry Date)   :</label></div>
                            <div class="form-group col-4">  <input type="date" asp-for="ExpiryDate" id="EndDate_STXT" /></div>
                            <div class="col-3"></div>
                            <div class="col-3"></div>
                            <div class="form-group col-2" style=" text-align: right; margin-top: 7px;"><label style=" margin-left: -55px;">Upload Notice document   :</label></div>
                            <div class="form-group col-4">  <input type="file" asp-for="NoticeDocument" id="NoticeDocument_STxtFile" /></div>
                            <div class="col-3"></div>
                            <div class="col-3"></div>
                            <div id="NoticeDisplaylogin" class="col-12" style="display: flex;">
                                <div class="col-3"></div>
                                <div class="form-group col-2" style=" text-align: right; margin-top: 7px;"><label class="form-grop required space">Display this Notice in Login   </label></div>
                                <div class="form-group col-4" style=" margin: 8px;">
                                    <div class="radio radio-primary">
                                        <input id="radioinline1" type="radio" asp-for="ShowInLogin" name="radio1" value="0" checked>
                                        <label class="mb-0" for="radioinline1">No</label>
                                        <input id="radioinline2" type="radio" asp-for="ShowInLogin" name="radio1" value="1">
                                        <label class="mb-0" for="radioinline2">Yes</label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-3"></div>

                            @*BY Sreekant Code*@
                            <div style=" display: flex; gap: 17px;">
                                <div class="col-3"></div>
                                <input type="button" id="BacktosearchNotice_SaBtn" class="btn btn-pill btn-outline-secondary btn-sm" value="Back To Search" />
                                <input type="button" id="PostthisNotice_SaBtn" class="btn btn-pill btn-outline-primary btn-aprimary" value="Post this Notice" />
                                <input type="button" id="Clear_SaBtn" class="btn btn-pill btn-outline-warning btn-air-warning" value="Clear" />
                                <input type="button" id="SaveNotice_SaBtn" class="btn btn-pill btn-outline-success btn-air-success" value="Save" />
                                <input type="button" id="savepostNotice_SaBtn" class="btn btn-pill btn-outline-info btn-air-info" value="Save and Post" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>




<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $('#BacktosearchNotice_SaBtn').click(function () {

        $('#Create_NoticeView').empty();
        $('#Search_NoticeView').show();
    });


    $('#Clear_SaBtn').click(function () {

        $('#SavevalidationMessage').text('');
        $('#Savevalidation').text('');
        $('#ENoticeTypeId_STXT').val('');
        $('#Subject_STXT').val('');
        $('#NoticeTypedd').val('');
        $('#ENoticeDescription_STXT').val('');
        $('#StartDate_STXT').val('');
        $('#EndDate_STXT').val('');
        $('#NoticeDocument_STxtFile').val('');

    });

    $(document).ready(function () {

        const PostNoticeButton = document.getElementById("PostthisNotice_SaBtn");
        PostNoticeButton.style.display = "none";

       // $("#Create_NoticeView").empty();
        $("#ManageNotices_CreateSMSNNotice_ViewDivid").empty();
        $("#ManageNotices_CreateSMS_SaveandPostbtnclick_PostNoticeDiv_id").empty();

        NoticeDropdown_CreateNotice_In_View();

        $("#NoticeDisplaylogin").show();
       
        $("#ENoticeTypeId_STXT").change(function () {
            debugger;
            if ($(this).val() != " ") { 
                $("#NoticeDisplaylogin").hide();
            } else {
                $("#NoticeDisplaylogin").show();
            }
        });

    });


    function NoticeDropdown_CreateNotice_In_View() {
        var InstanceIds = $('#Instance_STxt').val();
       
        $.ajax({
            type: "GET",
            url: "@Url.Action("NoticeTypedd", "Admin")", 
            data: { InstanceId: InstanceIds },
            success: function (data) {
                $.each(data, function (index, item) {
                    debugger;
                    $("#ENoticeTypeId_STXT").append($('<option>', {
                        value: item.value,
                        text: item.text
                    }));
                });
            },
        error: function (error) {
            console.error("Error fetching data:", error);
        }
    });
    }



  

    $('#SaveNotice_SaBtn').click(function () {

        if (SaveValidation()) {

            $('#SavevalidationMessage').text('');
            $('#Savevalidation').text('');
            debugger;
            var Subject = $('#Subject_STXT').val();
            var formdatastring = $("#CreateNoticeType").serialize();
            var fileInput = $("#NoticeDocument_STxtFile")[0];
            var files = fileInput.files;
            if (files.length > 0) {
                var file = files[0];
                var fileSize = file.size;
                var fileName = file.name;

                console.log("File Name: " + fileName);
                console.log("File Size: " + fileSize + " bytes");

                formdatastring += "&NoticeDocument=" + encodeURIComponent(fileName);
                formdatastring += "&DocSize=" + encodeURIComponent(fileSize);
            }
            var ShowInLogin= $('#radioinline1').val();
            formdatastring += "&ShowInLogin=" + encodeURIComponent(ShowInLogin);
            $.ajax({
                url: "/Admin/ManageNotices_Create",
                data: formdatastring,
                type: "POST",
                success: function (response) {
                    if (response == "1") {
                   
                        const Clear = document.getElementById("Clear_SaBtn");
                        const Save = document.getElementById("SaveNotice_SaBtn");
                        const PostNoticeButton = document.getElementById("PostthisNotice_SaBtn");
                        PostNoticeButton.style.display = "flex";
                        if (Clear) {
                            Clear.disabled = true;
                        }
                        if (Save) {
                            Save.disabled = true;
                        }

                        $("#SavevalidationMessage").text("Record inserted successfully.");

                    } else if (response == "-1") {

                        $("#SavevalidationMessage").text("Notice with subject " + '"' + Subject + '"' + " already exists.");

                    } else {

                        $("#SavevalidationMessage").text("Something went wrong please try again...........!");
                    }

                }
            });
        }

    });

    function SaveValidation() {

        debugger;
             
        var Subject = $('#Subject_STXT').val();
        var ENoticeTypeId = $('#NoticeTypedd').val();
        var ENoticeDescription = $('#ENoticeDescription_STXT').val();
        var StartDate = $('#StartDate_STXT').val();
        var ExpiryDate = $('#EndDate_STXT').val();
        var NoticeDocument = $('#NoticeDocument_STxtFile').val();

        var validationMessage = "";
        var hasError = false;

        if (Subject === "") {
            validationMessage += "Notice Subject<br>";
            hasError = true;
        }

        if (ENoticeTypeId === "") {
            validationMessage += "Notice Type<br>";
            hasError = true;
        }

        if (StartDate === "") {
            validationMessage += " Start date can not be left blank. <br>";
            hasError = true;
        }
        if (ExpiryDate === "") {
            validationMessage += " End date can not be left blank. <br>";
            hasError = true;
        }        

        if (StartDate > ExpiryDate) {
            validationMessage += "Start date can not be greater than end date.<br>";
            hasError = true;
        }
        var currentDate = new Date();
        if (StartDate < currentDate) {
            validationMessage += "Start Date can not be less than today.<br>";
            hasError = true;
        }

        var allowedExtensions = [".doc", ".xls", ".ppt", ".docx", ".xlsx", ".pptx", ".txt", ".jpeg", ".jpg", ".pjpeg", ".gif", ".png", ".pdf"];
        var fileInput = $("#NoticeDocument_STxtFile")[0]; // Get the DOM element

        if (fileInput.files.length > 0) {
            var fileName = fileInput.files[0].name;
            var fileExtension = fileName.split('.').pop().toLowerCase();

            if (allowedExtensions.indexOf("." + fileExtension) === -1) {
                
                validationMessage += "Uploaded file extension is invalid. Only " + allowedExtensions.join(", ") + " are supported.";
                event.preventDefault();
                hasError = true;
            }
        }


      
        if (hasError) {
            $('#Savevalidation').html("Following fields have invalid data :<br>");
            $("#SavevalidationMessage").html(validationMessage);
            return false;
        } else {
            $("#SavevalidationMessage").html("");
            return true;
        }

    }

</script>