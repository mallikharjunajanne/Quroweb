@model Connect4m_Web.Models.Attendenceproperites.UserScreen.Admissionreport
@{
    ViewData["TItle"] = "ADMISSIONS SUMMARY REPORT";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>


</head>
<body>
    <div class="flex-grow-1 container-p-y container-fluid">
        <h4 class="py-3 mb-4"><span class="text-muted fw-light">Reports /</span>ADMISSIONS SUMMARY REPORT</h4>
        <div class="row mb-2">
            <div class="col-md-12 col-lg-12 mb-3">
                <span class="text-danger" id="Commonerrormessage"></span>
                <div class="card mb-4">
                    <div class="card-header d-flex align-items-center justify-content-between">
                        <h5 class="mb-0">SEARCH USERS</h5>
                    </div>
                    <div class="card-body">
                        <form id="Admissionsreportform" enctype="multipart/form-data">
                            <div class="row col">
                                <div class="row mb-2">
                                    <div class="mb-2 row">
                                        <label class="col-sm-3 col-form-label space text-end" for="basic-default-name">Instances  </label>
                                        <div class="col-sm-3">
                                            <select asp-for="Instancesnames" class="form-select" id="ddlInstances" multiple></select>
                                        </div>
                                    </div>
                                    <div class="mb-2 row">
                                        <label class="col-sm-3 col-form-label space text-end" for="basic-default-name">For the Session</label>
                                        <div class="col-sm-3">
                                            <select asp-for="Acadamicyearid" class="form-select" id="ddlAcadamicyear"></select>
                                        </div>
                                        <label class="col-sm-3 col-form-label space text-end" for="basic-default-name">Class </label>
                                        <div class="col-sm-3">
                                            <select asp-for="Subclassificationid" class="form-select" id="ddlClass"></select>
                                        </div>
                                    </div>
                                    <div class="mb-2 row">
                                        <label class="col-sm-3 col-form-label space text-end">From Registration Date</label>
                                        <div class="col-sm-3">
                                            <input type="date" asp-for="FromRegistrationdate" class="form-control" id="txtFromRegDate" name="FromRegistrationdate" />
                                        </div>
                                        <label class="col-sm-3 col-form-label space text-end">To Registration Date </label>
                                        <div class="col-sm-3">
                                            <input type="date" asp-for="ToRegistrationdate" class="form-control" id="txtToRegDate" name="ToRegistrationdate" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row justify-content-center text-center">
                                    <div class="col-sm-12">
                                        <button type="reset" class="btn btn-warning waves-effect waves-light" id="BtnClear">Clear</button>
                                        <button type="submit" class="btn btn-success waves-effect waves-light" id="btnSubmit">Search</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-12 col-lg-12 mb-3">
            <div class="text-right">
                <a href="Javascript:void(0);" id="Admissionreportexporttoexcel">Export to Excel</a>
            </div>
            <div class="card mb-4">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h6 class="mb-0">
                        <span>
                            YOUR SEARCH RESULTED <span id="Recordcountstbl" class="badge badge-center rounded-pill bg-primary bg-glow"></span> RECORDS.
                        </span>
                    </h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive text-nowrap">
                        <table id="Admissionscounttbl" class="table-hover table-bordered no-footer text-center dataTable">
                            <thead>
                                <tr>
                                    <th>S. No.</th>
                                    <th>Instance</th>
                                    <th>Registration(s) Count</th>
                                    <th>Admission(s) Count</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-12 col-lg-12 mb-3" id="Registrationstbldiv" style="display:none;">
            <div class="text-right">
                <a href="Javascript:void(0);" id="Admissionreportexcel">Export to Excel</a>
            </div>
            <div class="card mb-4">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h6 class="mb-0">
                        <span>
                            YOUR SEARCH RESULTED <span id="Registrationstblcount" class="badge badge-center rounded-pill bg-primary bg-glow"></span> RECORDS.
                        </span>
                    </h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive text-wrap">
                        <table id="AdmissionreportResultstbl" class="table table-bordered no-footer text-center" style="display: none;">
                            <thead>
                                <tr>
                                    <th> S. No.</th>
                                    <th>Registration Date</th>
                                    <th>Reg No</th>
                                    <th>Name</th>
                                    <th>DOB</th>
                                    <th>Class Applied</th>
                                    <th>Father Name</th>
                                    <th>Mother name</th>
                                    <th>Mobile number</th>
                                    <th>Email Id</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                      </div>
                </div>
            </div>
        </div>

        <div class="col-md-12 col-lg-12 mb-3" id="Admissiontbldiv" style="display:none;">
            <div class="text-right">
                <a href="Javascript:void(0);" id="">Export to Excel</a>
            </div>
            <div class="card mb-4">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h6 class="mb-0">
                        <span>
                            YOUR SEARCH RESULTED <span id="Admissiontblcount" class="badge badge-center rounded-pill bg-primary bg-glow"></span> RECORDS.
                        </span>
                    </h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive text-wrap">
                        <table id="RegistartionreportResultstbl" class="table table-bordered no-footer text-center" style="display:none;">
                            <thead>
                                <tr>
                                    <th> S. No.</th>
                                    <th>Registration Date</th>
                                    <th>Reg No</th>
                                    <th>Name</th>
                                    <th>DOB</th>
                                    <th>Class Applied</th>
                                    <th>Father Name</th>
                                    <th>Mother name</th>
                                    <th>Mobile number</th>
                                    <th>Email Id</th>
                                    <th>DOJ</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</body>
</html>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>

<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js" type="text/javascript"></script>

<script src="~/js/CommonScripts.js"></script>
<script src="~/js/Admissionreport.js"></script>
