@model Connect4m_Web.Models.ManageUsersModel

@{
    //ViewData["Title"] = "Pay Role Tab";
    Layout = null;
}


<div class="card-header d-flex align-items-center justify-content-between">
    <h5 class="mb-0">
        <span>
            PAY ROLE INFORMATION
        </span>
    </h5><small class="required float-end"> INDICATES REQUIRED FIELDS</small>
</div>
<div class="card-body">
    <div class="row">

        <div class="col">
            @*----------------------*@
            <div class="mb-3 row">
                <label asp-for="Category" class="col-sm-2 col-form-label  text-end required ClsDivTeachers" for="basic-default-name"></label>
                <div class="col-sm-4 ClsDivTeachers">
                    <div class="position-relative">                        
                        <select id='DdlCategory' asp-for="Category" class="select2 form-select select2-hidden-accessible  ClsClear" onchange="CommonDropdownFunction('GET', '/Users/DdlPayRoleCategory_Calingfunction?Id=' + this.value, 'DdlSubCategory', '------Select------', true)" asp-items="@(new SelectList(ViewBag.DdlPayRoleCategoryList , "Value", "Text" ))" required>
                            <option value=''>------Select------</option>
                        </select>
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>
                </div>
                <label asp-for="SubCategory" class="col-sm-2 col-form-label  text-end required ClsDivTeachers" for="basic-default-name"></label>
                <div class="col-sm-4 ClsDivTeachers">
                    <div class="position-relative">
                        <select id='DdlSubCategory' asp-for="SubCategory" class="select2 form-select select2-hidden-accessible  ClsClear DdlCascadDropdowns" asp-items="@(new SelectList(ViewBag.DdlPayRoleCategoryIdList,"Value","Text"))" disabled required>
                            <option value=''>------Select------</option>
                        </select>
                        <span asp-validation-for="SubCategory" class="text-danger"></span>
                    </div>
                </div>
            </div>
            @*----------------------*@

            <div class="mb-3 row">
                <label asp-for="LMSCategory" class="col-sm-2 col-form-label  text-end required ClsDivTeachers" for="basic-default-name"></label>
                <div class="col-sm-4 ClsDivTeachers">
                    <div class="position-relative">
                        <select id='DdlLMSCategory' asp-for="LMSCategory" class="select2 form-select select2-hidden-accessible  ClsClear" onchange="CommonDropdownFunction('GET', '/Users/DdlLMSCategory_Calingfunction?Id=' + this.value, 'DdlLMSSubCategory', '------Select------', true)" asp-items="@(new SelectList(ViewBag.DdlLMSCategoryList, "Value", "Text" ))" required>
                            <option value=''>------Select------</option>
                        </select>
                        <span asp-validation-for="LMSCategory" class="text-danger"></span>
                    </div>
                </div>
                <label asp-for="LMSSubCategory" class="col-sm-2 col-form-label  text-end required ClsDivTeachers" for="basic-default-name"></label>
                <div class="col-sm-4 ClsDivTeachers">
                    <div class="position-relative">
                        <select id='DdlLMSSubCategory' asp-for="LMSSubCategory" class="select2 form-select select2-hidden-accessible  ClsClear DdlCascadDropdowns" asp-items="@(new SelectList(ViewBag.DdlLMSSubCategoryIdList,"Value","Text"))" disabled required>
                            <option value=''>------Select------</option>
                        </select>
                        <span asp-validation-for="LMSSubCategory" class="text-danger"></span>
                    </div>
                </div>

            </div>
            @*----------------------*@
        </div>
    </div>
</div>






<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js" type="text/javascript"></script>

<script src="~/js/GeneralFunctions.js"></script>
