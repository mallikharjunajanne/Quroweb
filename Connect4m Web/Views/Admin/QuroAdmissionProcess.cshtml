@model Connect4m_Web.Models.Attendenceproperites.UserScreen.AdmissionProcess

@{
    ViewData["Title"] = "Manage Admissions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>


</head>
<body>
    <div class="flex-grow-1 container-p-y container-fluid">
        <h4 class="py-3 mb-4"><span class="text-muted fw-light">Admin /</span>MANAGE ADMISSIONS</h4>
        <div class="text-left">
            <span id="CommonErrorMessage" class="text-danger"></span>
        </div>
        <div class="row mb-2" id="SearchAdmissionsDiv">
            <div class="text-end">
                <a href="javascript:void(0);" onclick="Newadmission()">Create New Application</a>
            </div>
            <div class="col-md-12 col-lg-12 mb-3">
                <div class="card mb-4">
                    <div class="card-header d-flex align-items-center justify-content-between">
                        <h5 class="mb-0">SEARCH USERS</h5>
                    </div>
                    <div class="card-body">
                        <form id="AdmissionsSearchform" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col">
                                    <div class="row mb-3">
                                        <div class="mb-3 row">
                                            <label class="col-sm-3 col-form-label space text-end" for="basic-default-name">First Name</label>
                                            <div class="col-sm-3">
                                                <input type="text" asp-for="FirstName" class="form-control" id="txtFirstname" name="FirstName" placeholder="First Name">
                                            </div>
                                            <label class="col-sm-3 col-form-label space text-end" for="basic-default-name">Middle Name</label>
                                            <div class="col-sm-3">
                                                <input type="text" asp-for="MiddleName" class="form-control" id="txtMiddlename" name="MiddleName" placeholder="Middle MiddleName">
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label class="col-sm-3 col-form-label space text-end" for="basic-default-name">Last Name</label>
                                            <div class="col-sm-3">
                                                <input type="text" asp-for="LastName" class="form-control" id="txtLastname" name="LastName" placeholder="Last Name">
                                            </div>
                                            <label class="col-sm-3 col-form-label space text-end" for="basic-default-name">Registration Number</label>
                                            <div class="col-sm-3">
                                                <input type="text" asp-for="InstanceUserCode" class="form-control" id="txtInstanceUserCode" name="InstanceUserCode" placeholder="Registration Number">
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label class="col-sm-3 col-form-label space text-end">For the Session</label>
                                            <div class="col-sm-3">
                                                <select asp-for="AcademicYearId" class="form-select" id="ddlAcademicYearId"></select>
                                            </div>
                                            <label class="col-sm-3 col-form-label space text-end">Class </label>
                                            <div class="col-sm-3">
                                                <select asp-for="Subclassificationid" class="form-select" id="ddlClass"></select>
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label class="col-sm-3 col-form-label space text-end">From Registration Date</label>
                                            <div class="col-sm-3">
                                                <input type="date" asp-for="Fromregistrationdate" class="form-control" id="txtFromRegDate" name="Fromregistrationdate" />
                                            </div>
                                            <label class="col-sm-3 col-form-label space text-end">To Registration Date</label>
                                            <div class="col-sm-3">
                                                <input type="date" asp-for="Toregistrationdate" class="form-control" id="txtToRegDate" name="Toregistrationdate" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row justify-content-center text-center">
                                        <div class="col-sm-12">
                                            <button type="reset" class="btn btn-warning waves-effect waves-light" id="BtnClear">Clear</button>
                                            <button type="submit" class="btn btn-success waves-effect waves-light" id="Btnsearch">Search</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-12 col-lg-12 mb-3">
                <div class="card">
                    <div class="card-header d-flex align-items-center justify-content-between">
                        <h5 class="mb-0">
                            <span>
                                YOUR SEARCH RESULTED <span id="Recordscount" class="badge badge-center rounded-pill bg-primary bg-glow"></span> RECORDS.
                            </span>
                        </h5>
                    </div>
                    <div class="links table-responsive text-nowrap" id="Admissiontbldiv">
                        <table id="Admissionstbl" class="table-hover table-bordered no-footer dataTable">
                            <thead>
                                <tr>
                                    <th>S. No.</th>
                                    <th>Registration Date</th>
                                    <th>Reg No</th>
                                    <th>Name</th>
                                    <th>DOB</th>
                                    <th>Class Applied</th>
                                    <th>Father Name</th>
                                    <th>Mother name</th>
                                    <th>Mobile number</th>
                                    <th>Email Id</th>
                                </tr>
                            </thead>
                            <tbody>  </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div id="ManageadmissionsContainerdiv1">

        </div>
    </div>
</body>
</html>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<script src="path/to/jquery.dataTables.min.js"></script>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>

<script src="~/js/CommonScripts.js"></script>
<script src="~/js/Admissionprocess.js"></script>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}