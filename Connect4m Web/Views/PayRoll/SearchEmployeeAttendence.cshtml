                                        <div class="col-sm-4 form-group">
                                            <div class="position-relative" id="Drop_Format_SEM_3">
                                                @Html.DropDownListFor(
                                           x => x.Month,
                                            new SelectList(ViewBag.Months, "Value", "Text"),
                                           "-------select-------", new { @class = "select2 form-select select2-hidden-accessible", @id = "insertdropdown_Month_EAP", @style = "color:black;", @required = "required" })

                                                <span asp-validation-for="Month" class="text-danger"></span>
