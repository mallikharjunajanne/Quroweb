    .dataTable td:nth-child(2) {
        color: #2B2B2B;
        /*  text-decoration: underline;*/
        font-weight: 600 !important;
    }

        .dataTable td:nth-child(2):hover {
            cursor: context-menu !important;
            color: #2B2B2B;
            text-decoration: none;
            font-weight: 600;
            background-color: antiquewhite;
        }

    #tblSEMsearchresultsER #SEMView_document {
        font-size: 24px;
        color: #500ef6;
        /*margin: 0px 0px 0px 27px;*/
        cursor: pointer;
        margin: 0px 0px 0px 8px;
    }

    #tblSEMsearchresultsER #SEM_Expendituredetails {
        font-size: 24px;
        color: green;
        /*margin: 0px 0px 0px 27px;*/
        cursor: pointer;
    }

    #tblSEMsearchresultsER .fa-eye:hover {
        background-color: #d5dee3;
        filter: drop-shadow(2px 4px 6px red);
        border-radius: 15px;
    }

    .SEMapprovals img:hover {
        cursor: default !important
    }

    #dataforexpensivereport {
        display: none
    }

    .form-popupapprovals {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 9999;
        overflow: auto;
    }

    /* Add styles to the form container */
    .form-containerapprovals {
        background-color: #fff;
        margin: 50px auto;
        padding: 20px;
        width: 80%;
        max-height: 80%;
        overflow-y: auto;
    }

    #close-popup {
        position: fixed;
        margin-left: 59%;
        padding: 6px;
        background-color: #fd2d63;
        color: white;
        z-index: 999;
        border-radius: 15px;
        border: 2px solid black;
    }

        #close-popup:hover {
            background-color: #2d830f;
            padding: 8px;
        }

    h6 {
        text-align: center;
        margin: 11px;
    }

        h6 span {
            background-color: #121451;
            COLOR: white;
            font-weight: 600;
            filter: drop-shadow(2px 4px 6px black);
            padding: 4px;
            border-radius: 15px;
        }
    .SEMapprovals img, .SEMapprovalsafter img {
        height: 20px;
        width: 20px;
    }

    .SEMapprovalsafter {
        display: flex;
        gap: 5px;
    }

</style>
<div id="popupContainerapprovals" class="form-popupapprovals">

    <div class="form-containerapprovals" id="popupinnerapprovals">
        <span id="close-popup">Close</span>
