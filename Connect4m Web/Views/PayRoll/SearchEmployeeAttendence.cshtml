                                           x => x.year,
                                            new SelectList(ViewBag.Years, "Value", "Text"),
                                           "-------select-------", new { @class = "select2 form-select select2-hidden-accessible", @id = "insertdropdown_year_EAP", @style = "color:black;", @required = "required" })

