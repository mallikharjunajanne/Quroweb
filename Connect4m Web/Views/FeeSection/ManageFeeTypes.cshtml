@model Connect4m_Web.Models.Attendenceproperites.Feetypes
@{
    ViewData["Tittle"] = "MANAGE FEE TYPES";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
@*<link href="~/css/maps/FeeScetion_Styles.css" rel="stylesheet" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />*@
</head>
<body>
    <div class="flex-grow-1 container-p-y container-fluid">
        <h4 class="py-3 mb-4"><span class="text-muted fw-light">FeeSection /</span>MANAGE FEE TYPES </h4>
        <span id="Commonerrormessage" class="text-danger"></span>
        <div class="row mb-2" id="">
            <div class="text-end">
                <a href="javascript:void(0);" id="Addnewfeetypelinkbtn" onclick="lnkAddNewfeetype(event)">Create Fee Type</a>
            </div>
            <div id="SearchFeetype_tbldiv">
                <div class="col-md-12 col-lg-12 mb-3">
                    <div class="card mb-4">
                        <div class="card-header d-flex align-items-center justify-content-between">
                            <h5 class="mb-0">SEARCH FEE TYPES</h5>
                        </div>
                        <div class="card-body">
                            <form id="Feetypesform" enctype="multipart/form-data">
                                <div class="row">
                                    <div class="row mb-3">
                                        <div class="row mb-3">
                                            <label class="col-sm-4 col-form-label space text-end" for="basic-default-name">Fee Type</label>
                                            <div class="col-sm-4">
                                                <input type="text" asp-for="FeeType" class="form-control" id="txtFeeTypesSeach" name="FeeType">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row justify-content-center text-center">
                                        <div class="col-sm-12">
                                            <button type="button" class="btn btn-info waves-effect waves-light" onclick="previouspages('ManageFeeConcedingTypes',null)">Previous Page</button>
                                            <button type="reset" class="btn btn-warning waves-effect waves-light" onclick="CommonClearFunction('attendancesummaryform')" id="BtnClear">Clear</button>
                                            <button type="button" class="btn btn-success waves-effect waves-light" id="btnsearch">Search</button>
                                            <button type="button" class="btn btn-primary waves-effect waves-light" onclick="nextpages('ManageFeeTerms',null)">Next Page</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 col-lg-12 mb-3">
                    <div class="card">
                        <div class="card-header d-flex align-items-center justify-content-between">
                            <h5 class="mb-0">
                                YOUR SEARCH RESULTED <span id="Recordscount" class="badge badge-center rounded-pill bg-primary bg-glow"></span> RECORDS.
                            </h5>
                        </div>
                        <div class="links table-responsive text-nowrap" id="Admissiontbldiv">
                            <table id="Feetypestbl" class="table table-bordered">
                                <thead class="table-dark">
                                    <tr>
                                        <th>S. No.</th>
                                        <th>Fee Type</th>
                                        <th>Discount Type</th>
                                        <th>Description</th>
                                        <th>Delete</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="Addnewfeetype_div1">

        </div>
    </div>
</body>
</html>

<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js" type="text/javascript"></script>
