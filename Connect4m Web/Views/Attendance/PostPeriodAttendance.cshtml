@model Connect4m_Web.Models.Attendenceproperites.AttendancePosting


@{
    ViewData["Title"] = "PostPeriodAttendance";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>

    <style>
        .underlined {
            text-decoration: underline;
        }

        .S_btn {
            width: 7%;
            height: 28px;
            margin-top: 16px;
            margin-left: 26%;
        }
    </style>
</head>
<body>
    <div class="flex-grow-1 container-p-y container-fluid">
        <h4 class="py-3 mb-4"><span class="text-muted fw-light">Attendance /</span>ATTENDANCE POSTING </h4>
        <div class="row mb-2">
            <div class="col-md-12 col-lg-12 mb-3">
                <div class="card-header pb-0" id="Manageholidays_Heaingmaindiv0">
                    <button class="btn btn-pill btn-outline-primary btn-aprimary" id="Post_Previous_Attendance_Link" style=" border-radius: 15px; height: 35px; margin-bottom: 3px;">
                        Click to Post Previous Attendance
                    </button>
                </div>
                <div id="Posting_Attendance_DateId">
                    <div class="row mb-3">
                        <label asp-for="StartDate" id="RlStartdate" class="control-label col-1 col-form-label space">StartDate</label>
                        <div class="col-sm-4">
                            <input type="date" class="form-control" /><input type="submit" value="Shiow Periods" />
                        </div>
                    </div>
                    </div>
                    <div class="card mb-4">
                        <div class="card-header d-flex align-items-center justify-content-between">
                            <h5 class="mb-0">
                                SEARCH FOR STUDENTS
                            </h5> <small class="text-muted float-end">* INDICATES MANDATORY FIELD</small>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col" id="PostPeriodAttendanceMaindiv">
                                    <form class="form" id="myform">
                                        <div class="row mb-3">
                                            <label asp-for="Faculty" class="control-label col-sm-4 col-form-label text-end required space">Faculty </label>
                                            <div class="col-sm-4">
                                                <div class="position-relative">
                                                    @{
                                                        var MentorNames = ViewBag.TcNames as List<AttendancePosting>;
                                                        var dropdownList = new SelectList(MentorNames, "UserId", "MentorName");
                                                    }

                                                    @Html.DropDownListFor(model => model.UserId, dropdownList, "---------Select---------", new { id = "Faculty_Id", @class = "form-select" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <label asp-for="Period" class="control-label col-sm-4 col-form-label text-end required space">Period </label>
                                            <div class="col-sm-4">
                                                <div class="position-relative">
                                                    <select class="select2 form-select select2-hidden-accessible" id="DdlSubClass" asp-for="Period">
                                                        <option value="">---------Select---------</option>
                                                       
                                                    </select>
                                                    <span asp-validation-for="Period" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <label class="control-label col-sm-4 col-form-label text-end"></label>
                                            <div class="col-sm-4">
                                                <input type="checkbox" class="form-check-input checkbox_animated" id="chk_seacrh_icon">
                                                <label class="form-check-label " for="showallsubjects" id="chk_seacrh_icon">Show On Duty</label>
                                            </div>
                                        </div>
                                        <div class="row justify-content text-center">
                                            <div class="col-sm-12">
                                                <button type="submit" class="btn btn-success waves-effect waves-light" id="Get_atd_btn">Get Attendance Form</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
    </div>


    @*--------*******Change  html code End*******-----*@

</body>
</html>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>

<script>
    $(document).ready(function () {
        $("#Posting_Attendance_DateId").hide();

        $("#Post_Previous_Attendance_Link").click(function (e) {
            e.preventDefault();


            $("#Posting_Attendance_DateId").toggle();
        });
    });

</script>