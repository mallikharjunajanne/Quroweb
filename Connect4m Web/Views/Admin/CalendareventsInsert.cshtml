@model Connect4m_Web.Models.Attendenceproperites.UserScreen.EventsClander
@{
    ViewData["Title"] = "CalendareventsInsert";
    Layout = null;
}



<div id="Managecalendarmaindiv">
    <div class="col-md-12 col-lg-12 mb-3">
        <div class="card mb-4">
            <div class="card-header d-flex align-items-center justify-content-between">
                <h5 class="mb-0">
                    SAVE EVENTS
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col">
                        <form id="Eventsinsertingform">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row mb-3">
                                <label class="control-label col-sm-4 col-form-label text-end required space">Event Date</label>
                                <div class="col-sm-4">
                                    <input type="date" asp-for="dateofevent" class="form-control" />
                                    <span class="text-danger" asp-validation-for="dateofevent"></span>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label class="control-label col-sm-4 col-form-label text-end required space">Event Title</label>
                                <div class="col-sm-4">
                                    <input type="text" class="form-control" asp-for="EventTitle" />
                                    <span class="text-danger" asp-validation-for="EventTitle"></span>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label class="control-label col-sm-4 col-form-label text-end space">Event Date</label>
                                <div class="col-sm-4">
                                    <textarea asp-for="EventDescription" class="form-control" id="EventDescriptionid" maxlength="8000" oninput="updateCharCount()"></textarea>
                                    <span id="charCount" class="text-right"></span>
                                </div>
                            </div>
                            <div class="row justify-content text-center">
                                <div class="col-sm-12">
                                    <button type="reset" class="btn btn-warning waves-effect waves-light" onclick="Clearcommonfunction('Classificaitionformid', null)" id="Clearbtnquote">Clear</button>
                                    <button type="button" class="btn btn-dark waves-effect waves-light" id="btnbacktosearch">BackToSearch</button>
                                    <button type="submit" class="btn btn-success waves-effect waves-light" id="btnsubmit">Save</button>
                                </div>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js" type="text/javascript"></script>


<script src="~/js/Managecalendar.js"></script>