                    <div class="row mb-3">
                        <label class="control-label col-sm-2 col-form-label  text-end space" style="margin: 6% 0%;">Role</label>
                        <div class="col-sm-10">

                            @{
                                var Rolesno = 0;
                                var Grpsno = 0;
                                var Cls = 0;
                                var Scl = 0;
                            }
                            @foreach (var item in ViewBag.List.IRoleList)
                            {
                                bool isChecked = false;
                                int instanceRoleId = @item.InstanceRoleId;
                                string instanceRoleIdString = instanceRoleId.ToString();

                                var targetTbl = ViewBag.List.ENoticeTargetTbl[1];
                                if (targetTbl != null && targetTbl.Count > 0)
                                {
                                    foreach (var Holidayitem in ViewBag.List.ENoticeTargetTbl[1])
                                    {
                                        string ComparingvalueString = @Holidayitem.Value;

                                        if (ComparingvalueString == instanceRoleIdString)
