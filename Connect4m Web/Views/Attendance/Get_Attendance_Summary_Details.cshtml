@model IEnumerable<Connect4m_Web.Models.Attendenceproperites.Attendance_Summary>

@{
    Layout = null;
}

<span class="text-danger">Total Number Of @ViewBag.Records Records </span>
<div class="row mb-2">
    <div class="col-md-12 col-lg-12 mb-3">
        <div class="card mb-4">
            <div class="card-header d-flex align-items-center justify-content-between">
                <h5 class="mb-0">
                    <span>
                        ATTENDANCE SUMMARY
                    </span>
                </h5>
            </div>
            <div class="card-body">
                <div class="card-datatable text-nowrap">
                    <div class="table-responsive">
                        <div class="table-responsive text-nowrap" id="Printattendancereport">
                            <table class="table table-bordered" id="FeeType_Tbl">
                                <thead class="table-dark">

                                    <tr>
                                        <th align="left" scope="col">Slot</th>
                                        <th align="left" scope="col">Faculty Name</th>
                                        <th align="left" scope="col">Total Classes</th>
                                        <th align="left" scope="col">Present</th>
                                        <th align="left" scope="col">Absent</th>
                                        <th align="left" scope="col">Percentage</th>
                                        <th align="left" scope="col">Required(%)</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        <tr style="background-color:White;height:24px;">
                                            <td align="left" style="width:300px;"> @Html.DisplayFor(modelItem => item.SubjectSlotName)</td>

                                            <td align="left">  @Html.DisplayFor(modelItem => item.Mentors)</td>
                                            <td align="left">   @Html.DisplayFor(modelItem => item.TotalClasses)</td>
                                            <td align="left">     @Html.DisplayFor(modelItem => item.TotalPresent)</td>
                                            <td align="left"> @Html.DisplayFor(modelItem => item.TotalAbsent)</td>
                                            @{
                                                double attendancePercentage = Convert.ToDouble(item.AttendancePercentage);
                                                string textColor = (attendancePercentage < 70) ? "red" : "green";
                                            }
                                            <td align="left" style="color: @textColor;">@Html.DisplayFor(modelItem => item.AttendancePercentage)</td>

                                            <td align="left">@Html.DisplayFor(modelItem => item.AttendanceRequiredPercent)</td>
                                        </tr>
                                    }
                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

