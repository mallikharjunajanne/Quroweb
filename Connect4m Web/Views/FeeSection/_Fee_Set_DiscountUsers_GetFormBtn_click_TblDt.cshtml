    function DiscountAmount_InsertBtn() {
        $('#DiscountAmount_users_ErrorsMessage').html('');
        debugger;
        var shouldMakeAjaxCall = true;
        var tbody = document.getElementById("Discount_Users_tbl");


        var rows = tbody.getElementsByTagName("tr");

        var dataToSend = [];

        for (var i = 0; i < rows.length; i++) {
            var row = rows[i];

            debugger;

            var sno = row.cells[0].innerText;
            var FirstName = row.cells[1].innerText;
            var UserId = row.cells[2].innerText;
            var FeeTypeid = $('#FeeTypeid_DD').val();
            var AcademicYearId = $('#AcademicYearId_DD').val();
            var FeeTermId = $('#FeeTermId_DD').val();
            //var ConcedingTypeId = row.cells[8].querySelector("select").value;
            //var discountAmount = row.cells[7].querySelector("input").value;
            // var ConcedingAmount = row.cells[9].querySelector("input").value;
            var ConcedingTypeId = row.cells[10].querySelector("select").value;

            var discountAmount = row.cells[9].querySelector("input").value;

            var ConcedingAmount = row.cells[11].querySelector("input").value;


            var DueDate = $('#duedatedata').val();
            //var comments = row.cells[10].querySelector("textarea").value;
            var comments = row.cells[12].querySelector("textarea").value;

            var updatedBy = $('#updatedBy_Txtid').val();



            var InstanceUserCode = row.cells[6].innerText;







            if (discountAmount == "") {
                $('#DiscountAmount_users_ErrorsMessage').html("Enter Valid Fee Amount for " + '"' + FirstName + '"' + "");
                shouldMakeAjaxCall = false;
                break;
            }
            if (parseFloat(ConcedingAmount) > parseFloat(discountAmount)) {
                $('#DiscountAmount_users_ErrorsMessage').html('Discount Amount Should not be Greater than Fee Amount for' + '"' + FirstName + '"');
                shouldMakeAjaxCall = false;
                break;
            }
            if (parseFloat(ConcedingAmount) == parseFloat(discountAmount)) {
                $('#DiscountAmount_users_ErrorsMessage').html('"Ananya S.Kuduvalli" has paid Rs. 600 ,you cannot Update the Fee amount.The difference of Fee Amount,Discount Amount should be Greater than or Equal to Paid Amount.');

                shouldMakeAjaxCall = false;
                break;
            }
            if (DueDate == "") {
                $('#DiscountAmount_users_ErrorsMessage').html("Please enter Due Date.");
                shouldMakeAjaxCall = false;
                break;
            }


            debugger;
            if (ConcedingAmount == "") {
                ConcedingAmount = "90142";
            }

            var rowData = {

                UserId: UserId,
                FeeTypeId: FeeTypeid,
                AcademicYearId: AcademicYearId,
                FeeTermId: FeeTermId,
                ConcedingTypeId: ConcedingTypeId,
                FeeAmount: discountAmount,
                ConcedingAmount: ConcedingAmount,
                DueDate: DueDate,
                Comments: comments,
                updatedBy: updatedBy

            };

            dataToSend.push(rowData);

        }
        if (shouldMakeAjaxCall) {
            var jsonData = JSON.stringify(dataToSend);


            $.ajax({
                url: '/FeeSection/DiscountAMount_ManageFeeDetails',
                type: 'POST',
                data: { Discount_Amount_Users_Details: jsonData },
                success: function (response) {
                    /*alert(response);*/
                    if (response == "2") {

                        $('#DiscountAmount_users_ErrorsMessage').text('Record(s) Submitted Successfully.');

                    } else if (response == "1") {

                        $('#DiscountAmount_users_ErrorsMessage').text('Record(s) Submitted Successfully.');

                    } else if (response == "-1") {

                        $('#DiscountAmount_users_ErrorsMessage').text();

                    } else {

                        $('#validationMessage').text('Something Wrong........!');

                    }
                },
                error: function () {

                }
            });
        }
    }





    $(document).ready(function () {
        $('.hideable').each(function () {

            debugger;

            var isAnyVisible = $('#Discount_Users_tbl .hideable:visible').length > 0;
            if (!isAnyVisible) {
                $(this).hide();
            }
        });
    });
</script>