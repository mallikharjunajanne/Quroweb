@model Connect4m_Web.Models.LMSproperties.PayRollproperties

@{
    ViewData["Title"] = "SearchSalaryAttributes";
    Layout = null;
}
@*<link href="~/Datatable/jquery.dataTables.css" rel="stylesheet" />*@
@*<link href="~/css/CommonStyle.css" rel="stylesheet" />*@
<style>
    #appendforinsertsalaryattribute {
        display: none;
    }
</style>
<h4 class="py-3 mb-4"><span class="text-muted fw-light"> Admin Module/</span>Configure Salary Attribute</h4>

<div class="row mb-2">
    <div class="col-md-12 col-lg-12 mb-3">

        <div class="card mb-4">
            @*<div class="card-header d-flex align-items-center justify-content-between">
                <h5 class="mb-0">
                    <span id="AddNewText_Span_CreatePage">
                        CONFIGURE SALARY ATTRIBUTES
                    </span>
                </h5>
            </div>*@
            <div class="demo-inline-spacing text-end">
                <div class="col-sm-3">
                </div>
                <button type="button" class="btn rounded-pill btn-info waves-effect waves-light" id="addnewsalaryattributebtn">  Create Instance Salary Attributes</button>
            </div>
            <div id="appendsearchsalaryattribute">
                <h5><label>SEARCH SALARY ATTRIBUTES</label></h5>
                <div class="card-body mb-2">

                    @*=============================  Form Start ================================*@
                    <form id="Serach_CSA">
                        <div>
                            <div class="row">
                                <div class="col">

                                    @*=====================        Drop Down                =================*@

                                    <div class="row mb-3">

                                        <label class="col-sm-2 col-form-label text-end" for="basic-default-name" asp-for="SalaryAttributeMasterId"></label>
                                        <div class="col-sm-4">
                                            <div class="position-relative" id="Drop_Format_SEM_3">

                                                @Html.DropDownListFor(
                                           x => x.SalaryAttributeMasterId,
                                            new SelectList(ViewBag.SalaryAttributeMasterId, "Value", "Text"),
                                           "-------select-------", new { @class = "select2 form-select select2-hidden-accessible", @id = "dropdown_SalaryAttributeMasterId_CSA", @style = "color:black;" })
                                            </div>
                                        </div>
                                        <label class="col-sm-2 col-form-label text-end" for="basic-default-name" asp-for="SalaryAttributeName"></label>
                                        <div class="col-sm-4 form-group">
                                            <input class="form-control" asp-for="SalaryAttributeName">

                                        </div>
                                    </div>

                                    @*=====================        TEXT BOX                 =================*@

                                    <div class="row mb-3">
                                        <label class="col-sm-2 col-form-label text-end" for="basic-default-name" asp-for="SalaryAttributeType"></label>
                                        <div class="col-sm-4">
                                            <div class="position-relative" id="Drop_Format_SEM_3">

                                                @Html.DropDownListFor(
                                           x => x.SalaryAttributeType,
                                            new SelectList(ViewBag.SalaryAttributeType, "Value", "Text"),
                                           "-------select-------", new { @class = "select2 form-select select2-hidden-accessible", @id = "dropdown_SalaryAttributeType_CSAsearch", @style = "color:black;" })
                                            </div>
                                        </div>

                                        <label class="col-sm-2 col-form-label text-end" for="basic-default-name" asp-for="IsActive"></label>
                                        <div class="col-sm-4">
                                            <div class="position-relative" id="Drop_Format_SEM_2">

                                                @Html.DropDownListFor(
                                           x => x.IsActive,
                                            new SelectList(ViewBag.IsActive, "Value", "Text"),
                                           "-------select-------", new { @class = "select2 form-select select2-hidden-accessible", @id = "dropdown_IsActive_CSA", @style = "color:black;" })
                                            </div>
                                        </div>
                                    </div>

                                    @*=====================        TEXT BOX                 =================*@

                                    <div class="row mb-3">
                                        <label class="col-sm-2 col-form-label text-end" for="basic-default-name" asp-for="StartDate"></label>
                                        <div class="col-sm-4">
                                            <input type="date" class="form-control" id="StartDate" asp-for="StartDate">
                                        </div>
                                        <label class="col-sm-2 col-form-label text-end" for="basic-default-name" asp-for="EndDate"></label>
                                        <div class="col-sm-4">
                                            <input type="date" class="form-control" id="StartDate" asp-for="EndDate">
                                        </div>
                                    </div>

                                    @*=====================         BUTTONS                =================*@

                                    <div class="row justify-content">
                                        <div class="col-sm-4">
                                        </div>

                                        <div class="col-sm-8">
                                            <button type="reset" class="btn btn-warning waves-effect waves-light" id="clearform">Clear</button>
                                            <button type="button" class="btn btn-success waves-effect waves-light" id="sub_tblCSA">Search</button>

                                            <button type="button" class="btn btn-primary waves-effect waves-light" id="Nextpage_CSA" onclick="nextpage('SearchSalaryAttributesForRoles',null)">Next Page</button>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                    @*=============================  Form End ================================*@

                </div>


                @*=============================  TABLE START ================================*@

                <div class="card">
                    <div class="card-header d-flex align-items-center justify-content-between">
                        <h6 class="mb-0">
                            <span id="AddNewText_Span_CreatePage">
                                MANAGE INSTANCE SALARY ATTRIBUTES
                            </span>
                        </h6>
                    </div>
                    <h6 class="card-title mb-0">
                        <span>YOUR SEARCH RESULTED <span id="totalrecords_Tranctions_CSA" class="badge badge-center rounded-pill bg-primary bg-glow">0</span> RECORD(S).</span>
                    </h6>
                    <div class="table-responsive text-nowrap">
                        <table id="tblCSAsearchresults" class="link table table-hover table-bordered ">
                            <thead class="table-dark">

                                <tr>
                                    <th>
                                        S.No
                                    </th>
                                    <th>
                                        S.No
                                    </th>
                                    <th>
                                        Attribute Name
                                    </th>
                                    <th>
                                        Type

                                    </th>
                                    <th>
                                        StartDate

                                    </th>
                                    <th>
                                        EndDate

                                    </th>
                                    <th>
                                        IsActive

                                    </th>
                                    <th>
                                        Delete

                                    </th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
                @*=============================  TABLE END ================================*@
            </div>
        
        
            <div id="appendforinsertsalaryattribute">

            </div>
        </div>
    </div>
  
</div>







