<div class="card">

    <div class="card-body">
        <div class="default-according style-1" id="accordionoc">
            <div class="card">
                <h6><span>STAFF MONTHLY LEAVE REPORT</span></h6>

                <div id="appendsearchmanageemployees">

                    <div class="card-header bg-primary">
                        <h5 class="mb-0">
                            <button class="btn btn-link text-white" data-bs-toggle="collapse" data-bs-target="#collapseicon" aria-expanded="true" aria-controls="collapse11">SEARCH EMPLOYEE LEAVE DETAILS<span style=" margin-left: 50%;" class="required"> INDICATES REQUIRED FIELDS</span></button>
                        </h5>
                    </div>
                    <div class="collapse show" id="collapseicon" aria-labelledby="collapseicon" data-bs-parent="#accordionoc">

                        <div class="row padding-search">
                            <div class="row">


                                <form id="Serach_StaffLeaveReport">
                                    <div class="row">
                                        <input type="text" value="@ViewBag.instancceidME" class="form-control" id="InstanceidforSMLR" disabled hidden />


                                        <div class="form-group col-2">


                                            <label class="control-label space required" asp-for="InstanceClassificationId"> </label>

                                        </div>
                                        <div class="form-group col-4">

                                            <div id="Drop_Format_SEM_3">
                                                @Html.DropDownListFor(
                                                x => x.InstanceClassificationId,
                                                new SelectList(ViewBag.Department, "Value", "Text"),
                                                "-------select-------", new { @class = "form-select readonly", @id = "dropdown_instanceclassficationstaffLeave", @style = "color:black;" })

                                            </div>
                                            <span asp-validation-for="InstanceClassificationId" class="text-danger"></span>


                                        </div>
                                        <div class="form-group col-2">


                                            <label class="control-label space required" asp-for="UserIdforEmployee"></label>
                                        </div>
                                        <div class="form-group col-4">

                                            <div id="Drop_Format_SEM_3">
                                                @Html.DropDownListFor(
                                                x => x.UserIdforEmployee,
                                                new SelectList(ViewBag.EmployeeNames, "Value", "Text"),
                                                "-------select-------", new { @class = "form-select readonly", @id = "dropdown_staff_Userid", @style = "color:black;" })

                                            </div>

                                            <span asp-validation-for="UserIdforEmployee" class="text-danger"></span>

                                        </div>
                                        <div class="form-group col-2">


                                            <label class="control-label space required" asp-for="Month"></label>
                                        </div>
                                        <div class="form-group col-4">

                                            <div id="Drop_Format_SEM_3">
                                                @Html.DropDownListFor(
                                                x => x.Month,
                                                new SelectList(ViewBag.Months, "Value", "Text"),
                                                "-------select-------", new { @class = "form-select readonly", @id = "dropdown_staff_Start_Month", @style = "color:black;" })

                                            </div>
                                            <span asp-validation-for="Month" class="text-danger"></span>


                                        </div>
                                        <div class="form-group col-2">


                                            <label class="control-label space required" asp-for="EndMonth"></label>
                                        </div>
                                        <div class="form-group col-4">

                                            <div id="Drop_Format_SEM_3">
                                                @Html.DropDownListFor(
                                                x => x.EndMonth,
                                                new SelectList(ViewBag.Months, "Value", "Text"),
                                                "-------select-------", new { @class = "form-select readonly", @id = "dropdown_staff_End_Month", @style = "color:black;" })

                                            </div>
                                            <span asp-validation-for="EndMonth" class="text-danger"></span>


                                        </div>

                                        <div class="form-group col-2">


                                            <label asp-for="ReportType" class="control-label required space"></label>
                                            @*<i class="fa fa-asterisk" style="font-size:11px;color:red"></i>*@

                                        </div>
                                        <div class="form-group col-4" >
                                            <div style=" display: flex; margin-bottom: 8px;">
                                                <input asp-for="ReportType" type="radio" name="ReportType" value="0" style="flex: 0.6;" checked /><span>Employee Montly Leave Report</span>

                                            </div>
                                            <div style="display: flex;">
                                                <input asp-for="ReportType" type="radio" name="ReportType" value="1" style="flex: 0.6;" /><span>Employee Weekly Leave Report</span>

                                            </div>



                                            <span asp-validation-for="ReportType" class="text-danger"></span>
                                        </div>

                                        <div class="form-group col-6"></div>
                                        <div style=" display: flex; gap: 17px;">
                                            <div class="col-5"></div>

                                            <input type="reset" value="Clear" class="btn btn-pill btn-outline-warning btn-air-warning" />
                                            <input type="submit" value="Search" id="sub_tblSMLR" class="btn btn-pill btn-outline-success btn-air-success" />

                                        </div>

                                    </div></form>
                            </div>


                        </div>
                    </div>
                   
                </div>



            </div>

        </div>
    </div>
</div>

<div id="appendstaffsearchLeave"></div>
<script src="~/lib/jquery/dist/jquery.js" type="text/javascript"></script>

