@model Connect4m_Web.Models.Attendenceproperites.UserScreen.Managequote
@{
    ViewData["Title"] = "ManageQuote";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="card">
    <div class="card-body">
        <div class="default-according style-1" id="accordionoc">
            <div class="card">
                <h6><span>Manage Quote</span></h6>

                <div class="card-header pb-0" id="Manageholidays_Heaingmaindiv0">
                    <button class="btn btn-pill btn-outline-primary btn-aprimary" style=" margin-left: 82%; border-radius: 15px; height: 35px; margin-bottom: 3px;" id="addnewmanagequotes">
                        @*addnewmanageholidays*@
                        Create Quote
                    </button>
                </div>
                <div id="ManageQuotemaindiv">@*Manageholidays_Main1*@
                    <div class="col-12" id="accordionoc1">
                        <div class="card-header bg-primary">
                            <h5 class="mb-0">
                                <button class="btn btn-link text-white" data-bs-toggle="collapse" data-bs-target="#collapseicon1" aria-expanded="true" aria-controls="collapse11" id="FlassNewsbtn">SEARCH QUOTES</button>
                            </h5>
                        </div>
                        <div class="collapse show" id="collapseicon1" aria-labelledby="collapseicon1" data-bs-parent="#accordionoc1">
