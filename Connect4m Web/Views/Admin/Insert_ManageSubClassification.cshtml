@model Connect4m_Web.Models.Attendenceproperites.UserScreen.ManageSubClassification
@{
    Layout = null;
}


<div id="ManageSubclassification_Containermaindiv">
    <div class="col-12" id="accordionoc1">
        <div class="card-header bg-primary">
            <h5 class="mb-0">
                <button class="btn btn-link text-white" data-bs-toggle="collapse" data-bs-target="#collapseicon1" aria-expanded="true" aria-controls="collapse11">
                    SAVE CLASS
                </button>
            </h5>
        </div>
        <div class="collapse show" id="collapseicon1" aria-labelledby="collapseicon1" data-bs-parent="#accordionoc1">
            <div class="padding-search row" id="ManageSubclassificationdivId!">
                <form id="Class_insertformid">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-3"></div>
                        <div class="form-group col-2">
                            <label class="form-grop control-label required space">Department Name  </label>
                        </div>
                        <div class="form-group col-4">
                            <select asp-for="InstanceClassificationId" id="In_Subclassificationdd" class="form-control">
                            </select>
                            <span asp-validation-for="InstanceSubclassificaitionId" class="text-danger"></span>
                        </div>


                        <div class="col-3"></div>
                        <div class="col-3"></div>
                        <div class="form-group col-2">
                            <label class="form-grop control-label required space">Class Name  </label>
                        </div>
                        <div class="form-group col-4">
                            <input type="text" asp-for="SubClassificationName" id="Subclass_txtid" class="form-control" />
                            <span asp-validation-for="SubClassificationName" class="text-danger"></span>
                        </div>


                        <div class="col-3"></div>
                        <div class="col-3"></div>
                        <div class="form-group col-2">
                            <label class="form-grop control-label space">Description   </label>
                        </div>
                        <div class="form-group col-4">
                            <textarea class="form-control" id="description_txt" asp-for="SubClassificationDescription"></textarea>
                        </div>


                        <div class="col-3"></div>
                        <div class="col-3"></div>
                        <div class="form-group col-2">
                            <label class="form-grop control-label  space">DisplayOrder  </label>
                        </div>
                        <div class="form-group col-4">
                            <input type="text" class="form-control" asp-for="DisplayOrder" />
                        </div>

                        <div class="col-3"></div>
                        <div class="col-3"></div>
                        <div class="form-group col-2">
                            <label class="form-grop control-label required space">Attendance Effective Date  </label>
                        </div>
                        <div class="form-group col-4">
                            <input type="text" class="form-control" asp-for="AttendanceEffectiveDate" />
                            <span asp-validation-for="AttendanceEndDate" class="text-danger"></span>
                        </div>


                        <div class="col-3"></div>
                        <div class="col-3"></div>
                        <div class="form-group col-2">
                            <label class="form-grop control-label required space">Attendance End Date  </label>
                        </div>
                        <div class="form-group col-4">
                            <input type="text" class="form-control" asp-for="AttendanceEndDate" />
                            <span asp-validation-for="AttendanceEndDate" class="text-danger"></span>
                        </div>



                        <div class="col-3"></div>
                        <div class="col-3"></div>
                        <div class="form-group col-2">
                            <label class="form-grop control-label required space">Results Display Mode  </label>
                        </div>
                        <div class="form-group col-4">
                            <select asp-for="ResultsModeID" id="ResultsdisplayMode" class="form-control">
                                <option value="">---Select---</option>
                                <option value="2">Class</option>
                                <option value="1">Grade</option>
                                <option value="4">None</option>
                                <option value="3">Rank</option>
                            </select>
                            <span asp-validation-for="ResultsModeID" class="text-danger"></span>
                        </div>


                        <div class="col-3"></div>
                        <div class="col-3"></div>
                        <div class="form-group col-2">
                            <label class="form-grop control-label  space">Class Teacher  </label>
                        </div>
                        <div class="form-group col-4">
                            <select asp-for="ClassTeacherId" id="In_ClassTeacherdd" class="form-control">
                                <option value="">---Select---</option>
                            </select>
                            <span asp-validation-for="ClassTeacherId" class="text-danger"></span>
                        </div>


                        <div class="col-3"></div>
                        <div class="col-3"></div>

                        <div class="form-group col-2">
                            <label asp-for="CoClassTeacherId" class="form-grop control-label  space">Co-Class Teacher  </label>
                        </div>
                        <div class="form-group col-4">
                            <select asp-for="CoClassTeacherId" id="In_CoClassTeacherdd" class="form-control">
                                <option value="">---Select---</option>
                            </select>
                            <span asp-validation-for="CoClassTeacherId" class="text-danger"></span>
                        </div>

                        <div class="col-3"></div>
                        <div class="col-3"></div>

                        <div class="form-group col-2"></div>
                        <div class="form-group col-6">
                            <button class="btn btn-pill btn-outline-warning btn-air-warning" id="IN_Clearbtn">Clear</button>
                            <button class="btn btn-pill btn-outline-primary btn-aprimary" id="IN_BackToSearchbtn">BackToSearch</button>
                            <button class="btn btn-pill btn-outline-success btn-air-success" id="Savebtn_">Save</button>
                        </div>
                        <div class="col-1"></div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>




<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/Datatable/jquery.dataTables.min.js"></script>
<script src="~/js/ManageSubclassification.js"></script>


<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js" type="text/javascript"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>