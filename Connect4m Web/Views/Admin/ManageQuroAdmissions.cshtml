@model Connect4m_Web.Models.Attendenceproperites.UserScreen.Confirmadmissions

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>


</head>
<body>
    <div class="flex-grow-1 container-p-y container-fluid">
        <h4 class="py-3 mb-4"><span class="text-muted fw-light">Admin /</span>CONFIRM ADMISSIONS</h4>
        <div class="row mb-2" id="SearchingConfirmadmissiondiv">
            <div class="col-md-12 col-lg-12 mb-3">
                <div class="card mb-4">
                    <div class="card-header d-flex align-items-center justify-content-between">
                        <h5 class="mb-0">SEARCH USERS</h5> <small class="text-muted float-end">* INDICATES REQUIRED FIELDS</small>
                    </div>
                    <div class="card-body">
                        <form id="ConfirmAdmissions_searchform" enctype="multipart/form-data">
                            <div class="row col">
                                <div class="row mb-3">
                                    <div class="mb-3 row">
                                        <label class="col-sm-2 col-form-label space text-end">First Name</label>
                                        <div class="col-sm-4">
                                            <input type="text" asp-for="FirstName" class="form-control" id="txtFirstName" name="FirstName" placeholder="FirstName">
                                        </div>
                                        <label class="col-sm-2 col-form-label space text-end">Middle Name</label>
                                        <div class="col-sm-4">
                                            <input type="text" asp-for="MiddleName" class="form-control" id="txtMiddleName" name="MiddleName" placeholder="MiddleName">
                                        </div>
                                    </div>
                                    <div class="mb-3 row">
                                        <label class="col-sm-2 col-form-label space text-end">Last Name</label>
                                        <div class="col-sm-4">
                                            <input type="text" asp-for="LastName" class="form-control" id="txtLastName" name="LastName" placeholder="LastName">
                                        </div>
                                    </div>
                                    <div class="mb-3 row">
                                        <label class="col-sm-2 col-form-label space text-end">For the Session</label>
                                        <div class="col-sm-4">
                                            <select asp-for="AcademicYearId" class="form-select" id="ddlAcademicYearId"></select>                  
                                            <span asp-validation-for="AcademicYearId" class="text-danger"></span>
                                        </div>
                                        <label class="col-sm-2 col-form-label space required text-end">Class</label>
                                        <div class="col-sm-4">
                                            <select asp-for="ClassId" class="form-select" id="ddlClass"></select>
                                            <span asp-validation-for="ClassId" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="mb-3 row">
                                        <label for="FirstName" class="col-sm-2 col-form-label space text-end">From Registration Date</label>
                                        <div class="col-sm-4">
                                            <input type="date" asp-for="FromRegistrationdate" class="form-control" id="txtFromRegDate" name="FromRegistrationdate" />
                                        </div>
                                        <label class="col-sm-2 col-form-label space text-end">To Registration Date</label>
                                        <div class="col-sm-4">
                                            <input type="date" asp-for="ToRegistrationdate" class="form-control" id="txtToRegDate" name="ToRegistrationdate" />
                                            <span id="DateCompareErrormessage" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row justify-content-center text-center">
                                    <div class="col-sm-12">
                                        <button type="reset" class="btn btn-warning waves-effect waves-light" onclick="Clearfun('#ConfirmAdmissions_searchform')">Clear</button>
                                        <button type="submit" class="btn btn-success waves-effect waves-light" id="searchbtn">Search</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div id="Confirmadmissionsdiv1">

        </div>
    </div>
</body>
</html>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>


<script src="~/js/CommonScripts.js"></script>
<script src="~/js/Confirmadmissions.js"></script>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://code.jquery.com/ui/1.13.0/jquery-ui.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js" type="text/javascript"></script>


@section Scripts
 {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}